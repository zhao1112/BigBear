<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds260"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_goods"
            android:layout_width="@dimen/ds200"
            android:layout_height="@dimen/ds200"
            android:layout_marginLeft="@dimen/ds20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds200"
            android:layout_marginLeft="@dimen/ds20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds20"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#333333"
                android:textSize="@dimen/ds24" />




            <com.yunqin.bearmall.widget.PriceView
                android:id="@+id/price_view"
                android:layout_marginTop="@dimen/ds15"
                android:layout_marginBottom="@dimen/ds20"
                android:layout_gravity="bottom"
                android:layout_width="@dimen/ds354"
                android:layout_height="@dimen/ds72">

            </com.yunqin.bearmall.widget.PriceView>








        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds20"
        android:background="#F7F7F7" />
</LinearLayout>