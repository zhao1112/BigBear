                android:layout_width="match_parent"
                android:layout_height="152pt"
                android:layout_marginLeft="@dimen/ds30"
                android:layout_marginTop="@dimen/ds20"
                android:layout_marginRight="@dimen/ds30"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="92pt"
                    android:layout_height="@dimen/ds92"
                    android:layout_marginLeft="@dimen/ds30">

                    <ImageView
                        android:layout_width="@dimen/ds92"
                        android:layout_height="@dimen/ds92"
                        android:src="@drawable/message_3" />

                    <TextView
                        android:id="@+id/number_unread_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/number_red_count_bg"

                        android:paddingLeft="@dimen/ds8"
                        android:paddingRight="@dimen/ds8"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ds18"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds20"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="系统通知"
                        android:textColor="#333333"
