                            android:textSize="@dimen/ds24" />

                        <TextView
                            android:id="@+id/time4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ds20"
                            android:layout_marginRight="@dimen/ds30"
                            android:textColor="#999999"
                            android:textSize="@dimen/ds20" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/event_layout_shangjin"
                android:layout_width="match_parent"
                android:layout_height="152pt"
                android:layout_marginLeft="@dimen/ds30"
                android:layout_marginTop="@dimen/ds20"
                android:layout_marginRight="@dimen/ds30"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="92pt"
                    android:layout_height="@dimen/ds92"
                    android:layout_marginLeft="@dimen/ds30">

                    <ImageView
                        android:layout_width="@dimen/ds92"
                        android:layout_height="@dimen/ds92"
                        android:src="@drawable/shangjin_icon" />

                    <TextView
                        android:id="@+id/number_unread_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/number_red_count_bg"
                        android:paddingLeft="@dimen/ds8"
                        android:paddingRight="@dimen/ds8"
                        android:textColor="@color/white"
