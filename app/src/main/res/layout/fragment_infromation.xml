                            android:textColor="#999999"
                            android:textSize="@dimen/ds24" />

                        <TextView
                            android:id="@+id/time5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ds20"
