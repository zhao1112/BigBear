<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <LinearLayout
        android:background="@color/TRANSPARENT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@drawable/bg_corner_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_29"
                android:text="素材下载"
                android:textColor="#ff272727"
                android:textSize="@dimen/sp_14"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_35"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sume_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="共5张  已下载 "
                    android:textColor="#ff272727"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/sume_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="5"
                    android:textColor="#24A064"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=" 张"
                    android:textColor="#ff272727"
                    android:textSize="@dimen/sp_14"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ProgressView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10">

                <com.timqi.sectorprogressview.ColorfulRingProgressView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/Progress"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    app:fgColorEnd="#ff272727"
                    app:fgColorStart="#ff272727"
                    app:strokeWidth="@dimen/dp_3"/>

                <TextView
                    android:id="@+id/ProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0%"
                    android:textSize="@dimen/sp_10"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/xiang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/goods_xiang"
                android:gravity="center"
                android:text="去相册查看"
                android:textColor="#ff272727"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/wan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_35"
                android:background="@drawable/goods_wan"
                android:gravity="center"
                android:text="取消"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>