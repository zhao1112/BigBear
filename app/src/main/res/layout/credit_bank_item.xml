<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="268pt"
    android:paddingLeft="30pt"
    android:paddingTop="15pt"
    android:paddingRight="30pt"
    android:paddingBottom="15pt">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bank_11"
        android:orientation="horizontal"
        android:paddingLeft="30pt"
        android:paddingRight="30pt">

        <ImageView
            android:id="@+id/bank_img"
            android:layout_width="208pt"
            android:layout_height="208pt"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="208pt"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40pt"
            android:orientation="vertical">

            <TextView
                android:id="@+id/top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#333333"
                android:textSize="28pt" />

            <TextView
                android:id="@+id/center_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="20pt"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"

                android:textColor="#999999"
                android:textSize="24pt" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6pt"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="信用卡状态："
                    android:textColor="#333333"
                    android:textSize="26pt" />

                <TextView
                    android:id="@+id/bottom_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="#E75B56"
                    android:textSize="26pt" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/first_bank_img"
        android:layout_width="72pt"
        android:layout_height="50pt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26pt"
        android:scaleType="centerCrop"
        android:src="@drawable/xyk_first" />


</RelativeLayout>