<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds150"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="@dimen/ds112"
            android:layout_height="@dimen/ds112"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds30"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/ds30"
            android:layout_marginRight="@dimen/ds58"
            android:layout_weight="1"
            android:maxLines="2"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <Button
            android:id="@+id/shaidan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ds50"
            android:layout_marginRight="@dimen/ds30"
            android:background="@drawable/address_bg_green"
            android:paddingBottom="@dimen/ds4"
            android:paddingLeft="@dimen/ds22"
            android:paddingRight="@dimen/ds22"
            android:paddingTop="@dimen/ds4"
            android:text="评价晒单"
            android:textColor="@color/main_color"
            android:textSize="@dimen/ds24" />


    </LinearLayout>


</RelativeLayout>