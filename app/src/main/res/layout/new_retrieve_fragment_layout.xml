<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/ds30">

        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ds90"
            android:gravity="center"
            android:text="18888888888"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds1"
            android:background="#E7E7E7" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds90"
            android:orientation="horizontal"
            android:paddingRight="@dimen/ds30">

            <EditText
                android:id="@+id/img_code_ed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入图片码"
                android:textColor="#333333"
                android:textSize="@dimen/ds28" />

            <ImageView
                android:id="@+id/img_code"
                android:layout_width="@dimen/ds158"
                android:layout_height="@dimen/ds64"
                android:layout_gravity="center_vertical"
                android:background="#bdbdbd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds90"
            android:orientation="horizontal"
            android:paddingRight="@dimen/ds30">

            <EditText
                android:id="@+id/random_code_ed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入随机码"
                android:textColor="#333333"
                android:textSize="@dimen/ds28" />

            <Button
                android:id="@+id/send_random_code"
                android:layout_width="@dimen/ds158"
                android:layout_height="@dimen/ds64"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_green"
                android:text="发送随机码"
                android:textColor="#169F65"
                android:textSize="@dimen/ds27" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/next_button"
        android:layout_width="@dimen/ds620"
        android:layout_height="@dimen/ds72"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds100"
        android:background="@drawable/new_version_pwd_button_selector"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/ds28" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="@dimen/ds620"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds22"
        android:textColor="#E75B56"
        android:textSize="@dimen/ds28" />


</LinearLayout>