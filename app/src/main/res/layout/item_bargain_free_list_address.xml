<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:padding="@dimen/ds40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/bargain_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ds28"
                    android:textColor="@color/product_name_color"
                    android:text="王进"
                    />

                <TextView
                    android:id="@+id/bargain_address_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ds28"
                    android:textColor="@color/product_brand_name_color"
                    android:text="15712975255"
                    android:layout_marginLeft="@dimen/ds48"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/bargain_address_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市 朝阳区 大郊亭桥金海国际6号楼1108"
                android:textColor="@color/product_customer_collect"
                android:layout_marginTop="@dimen/ds16"
                android:textSize="@dimen/ds24"
                android:singleLine="true"
                android:ellipsize="end"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/bargain_address_default"
            android:layout_width="@dimen/ds32"
            android:layout_height="@dimen/ds32"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/ds10"
            android:src="@drawable/icon_cart_selector"/>
        <ImageView
            android:layout_width="@dimen/ds32"
            android:layout_height="@dimen/ds32"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/ds40"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds2"
        android:background="#F7F7F7"/>

</LinearLayout>