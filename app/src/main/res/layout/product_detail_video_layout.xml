<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/new_version_play"
        android:layout_width="@dimen/ds108"
        android:layout_height="@dimen/ds108"
        android:layout_centerInParent="true"
        android:src="@drawable/new_version_play" />

    <ImageView
        android:id="@+id/new_version_pause"
        android:layout_width="@dimen/ds108"
        android:layout_height="@dimen/ds108"
        android:layout_centerInParent="true"
        android:src="@drawable/new_version_pause" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds52"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ds50"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="@dimen/ds96"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_green_1"
                android:gravity="center"
                android:text="视频"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/ds24" />


        </RelativeLayout>


        <View
            android:layout_width="@dimen/ds50"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="@dimen/ds96"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_green_2"
                android:gravity="center"
                android:text="图片"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/ds24" />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>