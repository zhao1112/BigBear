<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ds160"
    android:layout_height="@dimen/ds160"
    android:layout_marginLeft="@dimen/ds16">

    <RelativeLayout
        android:layout_width="@dimen/ds160"
        android:layout_height="@dimen/ds160"
        android:background="@drawable/comment_line"
        android:gravity="center">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/ds50"
            android:layout_height="@dimen/ds46"
            android:layout_centerHorizontal="true"
            android:src="@drawable/comment_phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ds18"
            android:text="上传图片"
            android:textColor="#999999"
            android:textSize="@dimen/ds24" />
    </RelativeLayout>


</RelativeLayout>


