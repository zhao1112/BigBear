<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/actionbar_layout" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/ds446"
                    android:layout_height="@dimen/ds260"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ds20"
                    android:src="@drawable/img_pingjia_wancheng" />


                <TextView
                    android:id="@+id/pay_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ds40"
                    android:text="开通成功"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/ds36" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ds40"
                    android:text="您现在可以享受大熊商城会员权益!"
                    android:textColor="#333333"
                    android:textSize="@dimen/ds26" />


                <TextView
                    android:id="@+id/go_to_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ds30"
                    android:layout_marginBottom="@dimen/ds60"
                    android:background="@drawable/bg_green"
                    android:paddingLeft="@dimen/ds48"
                    android:paddingTop="@dimen/ds12"
                    android:paddingRight="@dimen/ds48"
                    android:paddingBottom="@dimen/ds12"
                    android:text="返回首页逛逛"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/ds24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds30"
                android:layout_marginTop="@dimen/ds40"
                android:layout_marginRight="@dimen/ds30"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ds106"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1、糖果0元兑本月还可参与 0 次"
                            android:textSize="@dimen/ds28"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/t6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ds44"
                            android:textColor="#999"
                            android:textSize="@dimen/ds24"
                            android:visibility="gone" />

                    </LinearLayout>

                    <com.yunqin.bearmall.widget.Highlight.HighlightButton
                        android:id="@+id/type_2"
                        android:layout_width="@dimen/ds140"
                        android:layout_height="@dimen/ds56"
                        android:layout_marginRight="@dimen/ds10"
                        android:background="@drawable/privilege_shape_1"
                        android:text="立即参与"
                        android:textColor="#fff"
                        android:textSize="@dimen/ds24" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ds0.33"
                    android:background="#E7E7E7" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ds106"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/t2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2、抵扣券剩余 0 张"
                            android:textSize="@dimen/ds28"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/t3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ds44"
                            android:textColor="#999"
                            android:textSize="@dimen/ds24"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.yunqin.bearmall.widget.Highlight.HighlightButton
                        android:id="@+id/type_1"
                        android:layout_width="@dimen/ds140"
                        android:layout_height="@dimen/ds56"
                        android:layout_marginRight="@dimen/ds10"
                        android:background="@drawable/privilege_shape_1"
                        android:text="立即使用"
                        android:textColor="#fff"
                        android:textSize="@dimen/ds24" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ds0.33"
                    android:background="#E7E7E7" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ds106"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/t4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3、优惠券剩余 0 张"
                            android:textSize="@dimen/ds28"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/t5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ds44"
                            android:textColor="#999"
                            android:textSize="@dimen/ds24"
                            android:visibility="gone" />
                    </LinearLayout>


                    <com.yunqin.bearmall.widget.Highlight.HighlightButton
                        android:id="@+id/type_0"
                        android:layout_width="@dimen/ds140"
                        android:layout_height="@dimen/ds56"
                        android:layout_marginRight="@dimen/ds10"
                        android:background="@drawable/privilege_shape_1"
                        android:text="立即使用"
                        android:textColor="#fff"
                        android:textSize="@dimen/ds24" />

                </LinearLayout>

            </LinearLayout>


            <com.yunqin.bearmall.widget.CustomRecommendView
                android:id="@+id/recommend_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.yunqin.bearmall.widget.CustomRecommendView>
        </LinearLayout>


    </ScrollView>


</LinearLayout>