<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <com.androidkun.xtablayout.XTabLayout
      android:id="@+id/bacjstange_XTablayou"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_40"
      android:layout_gravity="center"
      android:background="@color/bg_green"
      android:overScrollMode="never"
      app:xTabDisplayNum="10"
      app:xTabDividerHeight="@dimen/ds16"
      app:xTabDividerWidthWidthText="true"
      app:xTabIndicatorColor="@color/md_bai"
      app:xTabMode="scrollable"
      app:xTabSelectedTextColor="@color/md_white"
      app:xTabSelectedTextSize="@dimen/ds30"
      app:xTabTextColor="#CFE5D8"
      app:xTabTextSelectedBold="true"
      app:xTabTextSize="@dimen/sp_14"
      tools:ignore="MissingConstraints" />

    <android.support.v4.view.ViewPager
        android:id="@+id/bacjstabge_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>