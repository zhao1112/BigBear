<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/vip_view_logon2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/bg_corner_search_dialog"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/top_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/logon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晋升任务（满足其一即可）"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/vip_logon_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_toLeftOf="@id/condition_tips"
                android:text="升级说明"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_12"/>

            <ImageView
                android:id="@+id/condition_tips"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/vip_tips"/>

        </RelativeLayout>

        <View
            android:id="@+id/condition_vie"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/top_condition"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffe1e1e1"/>

        <TextView
            android:id="@+id/condition_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/condition_vie"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13"
            android:text="方式一"
            android:textColor="#ff43a464"
            android:textSize="@dimen/sp_12"/>

        <RelativeLayout
            android:id="@+id/condition_two_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/condition_one"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/vip_logon_one_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请5名注册会员"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_logon_one_text"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/vip_logon_bar_one"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_5"
                    android:progressDrawable="@drawable/vip_personal_center"/>

                <TextView
                    android:id="@+id/vip_logon_text_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="2/5人"
                    android:textColor="#ff555555"
                    android:textSize="@dimen/sp_9"/>

            </LinearLayout>

            <TextView
                android:id="@+id/vip_logon_invitation"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_28"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_vip"
                android:gravity="center"
                android:text="去邀请"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/condition_four_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/condition_two_text"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/vip_logon_three_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成3单（0元购除外）"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_logon_three_text"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/vip_logon_bar_two"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_5"
                    android:progressDrawable="@drawable/vip_personal_center"/>

                <TextView
                    android:id="@+id/vip_logon_text_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="1/3单"
                    android:textColor="#ff555555"
                    android:textSize="@dimen/sp_9"/>

            </LinearLayout>

            <TextView
                android:id="@+id/vip_logon_extension"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_28"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_vip"
                android:gravity="center"
                android:text="去推广"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/v_two3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/condition_four_text"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/vip_tow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="或得3元佣金"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_tow3"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/vip_two_3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_5"
                    android:progressDrawable="@drawable/vip_personal_center"/>

                <TextView
                    android:id="@+id/vip_text_two3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="0/3元"
                    android:textColor="#ff555555"
                    android:textSize="@dimen/sp_9"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/condition_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_two3"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_28"
            android:text="方式二"
            android:textColor="#ff43a464"
            android:textSize="@dimen/sp_12"/>

        <RelativeLayout
            android:id="@+id/condition_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/condition_two"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/vip_logon_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="建立50人以上微信群"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>


            <TextView
                android:id="@+id/vip_logon_image"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_28"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_vip"
                android:gravity="center"

                android:text="上传截图"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/condition_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/condition_five"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/vip_logon_three_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成3单（0元购除外）"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_logon_three_text2"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/vip_logon_bar_two2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_5"
                    android:progressDrawable="@drawable/vip_personal_center"/>

                <TextView
                    android:id="@+id/vip_logon_text_two2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="1/3单"
                    android:textColor="#ff555555"
                    android:textSize="@dimen/sp_9"/>

            </LinearLayout>

            <TextView
                android:id="@+id/vip_logon_extension2"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_28"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_vip"
                android:gravity="center"
                android:text="去推广"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/v_two2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_below="@id/condition_six"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/vip_tow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="或得3元佣金"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_tow2"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/vip_two_2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_5"
                    android:progressDrawable="@drawable/vip_personal_center"/>

                <TextView
                    android:id="@+id/vip_text_two2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="0/3元"
                    android:textColor="#ff555555"
                    android:textSize="@dimen/sp_9"/>

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/vip_logon_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/v_two2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/bg_vip_up"
            android:text="立即升级"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>