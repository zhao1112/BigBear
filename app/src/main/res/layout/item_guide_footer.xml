<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="30pt"
    android:paddingRight="30pt">

    <com.yunqin.bearmall.widget.CircleImageView
        android:id="@+id/guide_footer_image"
        android:layout_width="45pt"
        android:layout_height="45pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30pt"
        android:layout_marginBottom="30pt"
        />

    <TextView
        android:id="@+id/guide_footer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="28pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/guide_footer_image"
        android:layout_marginLeft="20pt"
        />

    <ImageView
        android:id="@+id/guide_footer_arrow"
        android:layout_width="24pt"
        android:layout_height="24pt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/icon_arrow_down"
        />

    <TextView
        android:id="@+id/guide_footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="展开更多"
        android:textColor="#999999"
        android:textSize="24pt"
        app:layout_constraintRight_toLeftOf="@id/guide_footer_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10pt"
        />
    
</android.support.constraint.ConstraintLayout>