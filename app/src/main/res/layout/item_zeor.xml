<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_141"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_corner_white">

        <ImageView
            android:id="@+id/iz_image"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8" />

        <TextView
            android:id="@+id/iz_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toRightOf="@id/iz_image"
            android:text="小红书网红氨基酸洗发水护发素沐浴露持久留香男女柔顺去屑..."
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/iz_zhanjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iz_title"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/iz_image"
            android:text="已有8493参加"
            android:textColor="#ff777777"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/iz_yuanjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iz_zhanjia"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/iz_image"
            android:text="原价￥149.90"
            android:textColor="#ff777777"
            android:textSize="@dimen/sp_11" />

        <RelativeLayout
            android:id="@+id/iz_go"
            android:layout_width="@dimen/dp_155"
            android:layout_height="@dimen/dp_27"
            android:layout_below="@id/iz_yuanjia"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/iz_image">

            <LinearLayout
                android:layout_width="@dimen/dp_142"
                android:layout_height="match_parent"
                android:background="@drawable/bg_zeor"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/iz_sume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="5000"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:text="糖果可兑"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_11" />


            </LinearLayout>

            <TextView
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_zeor_go"
                android:gravity="center"
                android:text="GO"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14" />


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>