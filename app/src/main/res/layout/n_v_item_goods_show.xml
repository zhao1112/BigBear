<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view"
    android:layout_width="@dimen/ds356"
    android:layout_height="@dimen/ds500"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/n_v_od_img"
            android:layout_width="@dimen/ds336"
            android:layout_height="@dimen/ds336"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_tuijian" />

        <ImageView
            android:id="@+id/n_v_od"
            android:layout_width="@dimen/ds92"
            android:layout_height="@dimen/ds84"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/ds8"
            android:layout_marginRight="@dimen/ds10"
            android:src="@drawable/n_v_home_012" />


    </RelativeLayout>

    <TextView
        android:id="@+id/n_v_od_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds30"
        android:layout_marginTop="@dimen/ds20"
        android:layout_marginRight="@dimen/ds30"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="金刚葫芦娃哪吒金刚葫芦娃哪吒金刚葫芦娃哪吒"
        android:textColor="#333333"
        android:textSize="@dimen/ds28" />


    <LinearLayout
        android:layout_width="@dimen/ds336"
        android:layout_height="@dimen/ds72"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ds24"
        android:background="@drawable/price_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/ds124"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/ds10">

            <TextView
                android:id="@+id/kan_jia_gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金熊价"
                android:textColor="#23A064"
                android:textSize="@dimen/ds20" />

            <TextView
                android:id="@+id/n_v_od_jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#23A064"
                android:textSize="@dimen/ds20" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/n_v_od_dlayout"
            android:layout_width="@dimen/ds192"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds20"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/ds10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元兑"
                android:textColor="#f9f9f9"
                android:textSize="@dimen/ds20" />

            <TextView
                android:id="@+id/n_v_od_duijiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="@dimen/ds20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/n_v_od_klayout"
            android:layout_width="@dimen/ds192"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds20"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10pt"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发起砍价"
                android:textColor="#f9f9f9"
                android:textSize="@dimen/ds28" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>