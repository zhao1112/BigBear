<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/n_v_t_linear"
        android:layout_width="@dimen/ds370"
        android:layout_height="@dimen/ds560"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="@dimen/ds10"
                android:layout_marginRight="@dimen/ds10"
                android:id="@+id/n_v_t_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds360"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_tuijian" />

            <ImageView
                android:id="@+id/n_v_t_img_t"
                android:layout_width="@dimen/ds74"
                android:layout_height="@dimen/ds50"
                android:layout_marginLeft="@dimen/ds32"
                android:src="@drawable/n_v_xp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/n_v_t_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds15"
            android:layout_marginTop="@dimen/ds20"
            android:layout_marginRight="@dimen/ds15"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:text="金刚葫芦娃哪吒"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds72"
            android:layout_marginTop="@dimen/ds15"
            android:paddingLeft="@dimen/ds10"
            android:paddingRight="@dimen/ds10">

            <com.yunqin.bearmall.widget.PriceView
                android:id="@+id/price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </LinearLayout>


    </LinearLayout>


</LinearLayout>