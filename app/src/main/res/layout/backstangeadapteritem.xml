<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_corner_search_dialog">

        <ImageView
            android:id="@+id/back_adapter_image"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15" />

        <TextView
            android:id="@+id/back_adapter_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_toRightOf="@id/back_adapter_image"
            android:ellipsize="end"
            android:lines="2"
            android:text="好吉利30包手帕纸便携纸巾餐巾纸卫生纸随身装面巾纸小包实惠装"
            android:textColor="#ff272727"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/back_adapter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_toRightOf="@id/back_adapter_image"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:text="订单编号：1234567890"
            android:textColor="#272727"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/back_adapter_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/back_view"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_13"
            android:background="@drawable/order_text"
            android:paddingLeft="@dimen/dp_24"
            android:paddingTop="@dimen/dp_27"
            android:paddingRight="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_8"
            android:text="复制"
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_12"
            />

        <View
            android:id="@+id/back_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_120"
            android:background="#E1E1E1" />

        <TextView
            android:id="@+id/back_apdate_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_view"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:text="+￥6.32"
            android:textColor="#FB4023" />


    </RelativeLayout>


</LinearLayout>