<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_corner_search_dialog">

        <ImageView
            android:id="@+id/back_adapter_image"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"/>

        <TextView
            android:id="@+id/back_adapter_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_toRightOf="@id/back_adapter_image"
            android:ellipsize="end"
            android:lines="2"
            android:text="好吉利30包手帕纸便携纸巾餐巾纸卫生纸随身装面巾纸小包实惠装"
            android:textColor="#ff272727"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/back_adapter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/back_view"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_toRightOf="@id/back_adapter_image"
            android:text="订单编号：1234567890"
            android:textColor="#272727"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/back_adapter_copy"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentRight="true"
            android:layout_above="@id/back_view"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/order_text"
            android:gravity="center"
            android:text="复制"
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_12"/>

        <View
            android:id="@+id/back_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/back_adapter_image"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffe1e1e1"/>

        <TextView
            android:id="@+id/back_apdate_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/sp_16"
            android:layout_marginRight="@dimen/sp_15"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="+￥6.32"
            android:textColor="#FB4023"/>

    </RelativeLayout>

</LinearLayout>