<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@android:color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <ImageView

      android:id="@+id/iv_imge"
     android:scaleType="centerCrop"
      android:layout_width="match_parent"
      android:layout_height="400dp" />

    <LinearLayout

        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <LinearLayout
          android:layout_weight="1"
          android:orientation="vertical"
          android:layout_width="0dp"
          android:layout_height="wrap_content">
      <TextView
          android:id="@+id/tv_title"
          android:lineSpacingExtra="4dp"
          android:layout_width="match_parent"
          android:layout_height="75dp"
          android:textColor="#ff373636"
          android:maxLines="3"
          android:ellipsize="end"
          android:textSize="14sp"
          />
      <TextView
          android:id="@+id/tv_yuanjia"
          android:text="原价：120"
          android:textColor="#ff8e8b8b"
          android:textSize="12dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
     />
     <LinearLayout
         android:layout_marginTop="10dp"
         android:orientation="horizontal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
       <TextView

           android:id="@+id/tv_quan"
           android:background="@mipmap/icon_coupons"
           android:gravity="center"
           android:textColor="@android:color/white"
           android:textSize="12sp"
           android:layout_width="65dp"
           android:layout_height="22dp"
           android:text="10元券"/>

       <TextView
           android:layout_marginLeft="6dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="券后价："
           android:textColor="#ff666666"
           android:textSize="12sp"
           />
       <TextView
           android:id="@+id/tv_quanhoujia"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=" ￥88.00"
           android:textColor="#ffe71616"
           android:textSize="15sp"
           />
     </LinearLayout>
    </LinearLayout>
      <LinearLayout
          android:gravity="center"
          android:orientation="vertical"
          android:layout_gravity="center_vertical"
          android:layout_marginRight="20dp"
          android:layout_marginLeft="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp">
          <ImageView
              android:layout_centerInParent="true"
              android:id="@+id/tv_erweima"
              android:layout_width="90dp"
              android:layout_height="90dp" />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长按识别二维码"
            android:textColor="#111111"
            android:textSize="9dp"
            />

      </LinearLayout>



    </LinearLayout>



</LinearLayout>