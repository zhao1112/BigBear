<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/art_one"
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="@dimen/dp_14"
                        android:background="@mipmap/art_bg"
                        android:gravity="center"
                        android:text="置顶"
                        android:textColor="#ffffffff"
                        android:textSize="10sp"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:id="@+id/sc_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_9"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/dp_5"
                        android:maxLines="2"
                        android:text="1111111111111111111111111111111111"
                        android:textColor="#ff272727"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dp_15">

                    <TextView
                        android:id="@+id/sc_live_sume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/sp_11"/>

                    <View
                        android:layout_width="@dimen/dp_0_5"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:background="#ff999999"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/sc_see_sume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/sp_11"/>

                    <TextView
                        android:id="@+id/sc_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/sp_11"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_90"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_15">

                <ImageView
                    android:id="@+id/sc_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/sc_video_image"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/school_play"
                    android:visibility="gone"/>


            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#fff1f1f1"/>

    </LinearLayout>

</LinearLayout>