<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rest_layout"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:background="@drawable/selector_bg"
        >

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="30pt"
            android:layout_height="38pt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32pt"
            android:src="@drawable/icon_rest_money_green"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/image_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="余额"
            android:textColor="#333333"
            android:textSize="28pt"
            android:layout_marginLeft="24pt"
            />

        <ImageView
            android:id="@+id/rest_radio"
            android:layout_width="32pt"
            android:layout_height="32pt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="30pt"
            android:src="@drawable/selector_pay_way_radio"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1pt"
            android:background="#E7E7E7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/image_view"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/wechat_layout"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:background="@drawable/selector_bg"
        app:layout_constraintTop_toBottomOf="@id/rest_layout"
        >

        <ImageView
            android:id="@+id/image_view_1"
            android:layout_width="40pt"
            android:layout_height="40pt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32pt"
            android:src="@drawable/icon_wechat_pay"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/image_view_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="微信支付"
            android:textColor="#333333"
            android:textSize="28pt"
            android:layout_marginLeft="24pt"
            />

        <ImageView
            android:id="@+id/wechat_radio"
            android:layout_width="32pt"
            android:layout_height="32pt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="30pt"
            android:src="@drawable/selector_pay_way_radio"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1pt"
            android:background="#E7E7E7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/image_view_1"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/alipay_layout"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:background="@drawable/selector_bg"
        app:layout_constraintTop_toBottomOf="@id/wechat_layout"
        >

        <ImageView
            android:id="@+id/image_view_2"
            android:layout_width="40pt"
            android:layout_height="40pt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32pt"
            android:src="@drawable/icon_alipay"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/image_view_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="支付宝"
            android:textColor="#333333"
            android:textSize="28pt"
            android:layout_marginLeft="24pt"
            />

        <ImageView
            android:id="@+id/alipay_radio"
            android:layout_width="32pt"
            android:layout_height="32pt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="30pt"
            android:src="@drawable/selector_pay_way_radio"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1pt"
            android:background="#E7E7E7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/image_view_2"
            />

    </android.support.constraint.ConstraintLayout>


    <Button
        android:id="@+id/pay_way_btn"
        android:layout_width="match_parent"
        android:layout_height="102pt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/selector_main_color_press"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="32pt"
        />


</android.support.constraint.ConstraintLayout>