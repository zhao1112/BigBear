<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds1"
        android:background="@color/item_specification_item_minus_border"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds100"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bargain_free_share_like_layout"
            android:layout_width="@dimen/ds98"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bargain_free_share_like_img"
                android:layout_width="@dimen/ds50"
                android:layout_height="@dimen/ds50"
                android:src="@drawable/icon_like_normal" />

            <TextView
                android:id="@+id/bargain_free_share_like_tv_isFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds2"
                android:text="收藏"
                android:textColor="@color/product_customer_collect"
                android:textSize="@dimen/ds20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bargain_free_share_original_price_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/collect_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直接购买"
                android:textColor="@color/white"
                android:textSize="@dimen/ds24" />

            <TextView
                android:id="@+id/bargain_free_share_original_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/ds24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bargain_free_share_current_price_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前价立即购买"
                android:textColor="@color/white"
                android:textSize="@dimen/ds24" />

            <TextView
                android:id="@+id/bargain_free_share_current_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/ds24" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>