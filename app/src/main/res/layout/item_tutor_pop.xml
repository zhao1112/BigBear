<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_45"
        android:background="@drawable/bg_corner_search_dialog"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_89"
                android:scaleType="fitXY"
                android:src="@mipmap/tutor_bg"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导师微信"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/tutor_wx_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信号：TTQ666"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_14"/>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tutor_image"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_160"
                android:layout_marginTop="@dimen/dp_34"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tutor_copy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_34"
                android:layout_marginRight="@dimen/dp_60"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/address_bg_green1"
                android:gravity="center"
                android:text="复制微信号添加好友"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>