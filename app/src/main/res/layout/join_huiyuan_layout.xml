<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="@dimen/ds534"
        android:layout_height="@dimen/ds356"
        android:background="#ffffff"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58pt">

            <RelativeLayout
                android:id="@+id/close_dialog_"
                android:layout_width="58pt"
                android:layout_height="58pt"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="28pt"
                    android:layout_height="28pt"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/icon_close_dialog_" />

            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ds50"
                android:layout_marginRight="@dimen/ds50"
                android:gravity="center"
                android:text="您还不是会员， 请先成为会员再进行提现！"
                android:textColor="#333333"
                android:textSize="@dimen/ds30" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds72"
            android:layout_marginBottom="@dimen/ds30"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/ok"
                android:layout_width="460pt"
                android:layout_height="match_parent"
                android:background="@drawable/bg_green_1"
                android:gravity="center"
                android:text="点击开通会员，享受更多权益"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/ds28" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>