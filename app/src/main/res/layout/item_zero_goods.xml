<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds1"
        android:background="#F7F7F7" />

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds260"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_goods"
            android:layout_width="@dimen/ds200"
            android:layout_height="@dimen/ds200"
            android:layout_marginLeft="@dimen/ds20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds200"
            android:layout_marginLeft="@dimen/ds30"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="#333333"
                android:textSize="@dimen/ds24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5pt"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pintuan_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#909090"
                    android:textSize="@dimen/ds24" />

                <TextView
                    android:id="@+id/pintuan_guimo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds10"
                    android:background="@drawable/zero_10_bg"
                    android:paddingLeft="@dimen/ds8"
                    android:paddingTop="@dimen/ds4"
                    android:paddingRight="@dimen/ds8"
                    android:paddingBottom="@dimen/ds4"
                    android:textColor="#D0021B"
                    android:textSize="@dimen/ds20"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds72"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/ds15"
                android:layout_marginRight="20pt"
                android:background="@drawable/product_price_bg"
                android:foreground="@drawable/shape_snatch_forground_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/ds10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="金熊价"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/ds20" />

                    <TextView
                        android:id="@+id/tv_rmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdas"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/ds20" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/ds10">

                    <TextView
                        android:id="@+id/people_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ds20" />

                    <TextView
                        android:id="@+id/tv_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ds20" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>