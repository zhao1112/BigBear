<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/me_clear"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="right"
            android:src="@drawable/icon_close"/>

        <ImageView
            android:id="@+id/me_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_362"
            android:layout_marginTop="@dimen/dp_22"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40">

            <TextView
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@id/conten_title"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/conten_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="分享方式"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12"/>

            <TextView
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_1"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toLeftOf="@id/conten_title"
                android:background="#FFFFFF"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

        <LinearLayout
            android:id="@+id/wx_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:src="@mipmap/wechat_bus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="微信好友"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_11"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/moments_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:src="@mipmap/pengyouquan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="微信朋友圈"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_11"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dwon_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:src="@mipmap/picture"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="保存图片"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_11"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>