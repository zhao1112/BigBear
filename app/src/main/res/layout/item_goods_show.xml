<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/ds374"
        android:layout_height="@dimen/ds561"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_good"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds360"
            android:padding="@dimen/ds16"
            android:src="@drawable/test_goods_image" />

        <TextView
            android:id="@+id/item_good_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ds20"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/ds5"
            android:maxLines="2"
            android:minLines="2"
            android:text="asdasd"
            android:textColor="#333333"
            android:textSize="@dimen/ds24" />

        <com.yunqin.bearmall.widget.PriceView
            android:id="@+id/price_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ds72"
            android:layout_marginLeft="@dimen/ds12"
            android:layout_marginRight="@dimen/ds12">

        </com.yunqin.bearmall.widget.PriceView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds2"
            android:background="#F7F7F7" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/ds2"
        android:layout_height="@dimen/ds560"
        android:background="#F7F7F7" />
</LinearLayout>