<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <RelativeLayout
        android:id="@+id/mine_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_185"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/top_bg">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mine_top"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_34">

        <com.yunqin.bearmall.widget.CircleImageView
            android:id="@+id/mine_head"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"/>

        <TextView
            android:id="@+id/mine_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_toRightOf="@id/mine_head"
            android:text="大熊昵称"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_18"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/mine_vip"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_below="@id/mine_nickname"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_toRightOf="@id/mine_head"
            android:background="@drawable/mine_vip"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_vip"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_4"
                android:src="@mipmap/mine_vip"/>

            <TextView
                android:id="@+id/vip_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_toRightOf="@id/image_vip"
                android:text="金熊会员"
                android:textColor="#ffffc755"
                android:textSize="@dimen/sp_11"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/openvip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_nickname"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_toRightOf="@id/mine_head"
            android:background="@drawable/mine_vip"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_11"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_3"
            android:text="立即开通会员"
            android:textColor="#FFE534"
            android:textSize="@dimen/sp_11"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/mine_vip_data"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_below="@+id/mine_nickname"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_toRightOf="@+id/mine_vip"
            android:gravity="center_vertical"
            android:text="剩余2天，"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_11"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/open_vip_one"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_below="@+id/mine_nickname"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_toRightOf="@+id/mine_vip_data"
            android:gravity="center_vertical"
            android:text="立即续费"
            android:textColor="#FFE534"
            android:textSize="@dimen/sp_11"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/mine_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/mine_head"
            android:text="立即登录"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_16"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_23"
        android:layout_below="@id/mine_top"
        android:layout_marginLeft="@dimen/dp_88"
        android:layout_marginTop="@dimen/dp_3"
        android:background="@mipmap/mine_yaoqingma"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/copy_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="邀请码"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:text=" : "
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/mine_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="SQV049"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/mine_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:background="@drawable/address_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_3"
                android:text="点击复制"
                android:textColor="#ff29895a"
                android:textSize="@dimen/sp_11"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mine_news"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_22"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_157"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/mine_notice"/>

        <com.yunqin.bearmall.widget.DotView
            android:id="@+id/dot_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/mine_set"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_22"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_157"
        android:layout_toLeftOf="@id/mine_news"
        android:src="@drawable/icon_nav_setting"/>

    <RelativeLayout
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_below="@id/code"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/mine_profit">

        <RelativeLayout
            android:id="@+id/mine_regimental"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_10"
            android:visibility="gone">

            <ImageView
                android:id="@+id/tuanz"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:src="@mipmap/mine_tuanzhang"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_toRightOf="@id/tuanz"
                android:text="成为金熊大团长"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/mine_commander"
                android:layout_width="@dimen/dp_67"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/mine_tuan"
                android:gravity="center"
                android:text="立即参与"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/xis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_9"
            android:background="@drawable/bg_corner_search_dialog">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/shang"
                android:background="@drawable/bg_corner_search_dialog">

                <LinearLayout
                    android:id="@+id/mine_withdrawal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可提现收益（元）"
                        android:textColor="#ff777777"
                        android:textSize="@dimen/sp_11"/>

                    <TextView
                        android:id="@+id/mine_withdrawal_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="0.00"
                        android:textColor="#ffd62b2b"
                        android:textSize="@dimen/dp_24"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_35"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/mine_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日预估收益（元）"
                            android:textColor="#ff777777"
                            android:textSize="@dimen/sp_11"/>

                        <TextView
                            android:id="@+id/mine_today_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:text="0.00"
                            android:textColor="#ff272727"
                            android:textSize="@dimen/sp_16"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mine_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="本月预估收益（元）"
                            android:textColor="#ff777777"
                            android:textSize="@dimen/sp_11"/>

                        <TextView
                            android:id="@+id/mine_month_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:text="0.00"
                            android:textColor="#ff272727"
                            android:textSize="@dimen/sp_16"/>

                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_100"
                    android:layout_centerInParent="true"
                    android:background="#4D333333"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/shang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_7">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/mine_tip"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:text="每月25日结算上月预估收入，建议26日再进行提现！"
                    android:textColor="#ff272727"
                    android:textSize="@dimen/sp_11"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/two"
        android:background="#F7F7F7">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#F7F7F7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F7F7F7">

                <LinearLayout


                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_84"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/bg_corner_search_dialog"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/mine_wallet"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/wallet_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/wallet_click"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="我的钱包"
                            android:textColor="#ff303030"
                            android:textSize="@dimen/sp_12"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mine_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/order_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/order_click"/>

                            <TextView
                                android:id="@+id/daifukuan_number"
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="@dimen/dp_15"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="0dp"
                                android:background="@drawable/order_number_shape"
                                android:gravity="center"
                                android:text="99+"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_8"
                                android:visibility="gone"/>

                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="我的订单"
                            android:textColor="#ff303030"
                            android:textSize="@dimen/sp_12"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mine_fraction"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fans_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fans_click"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="我的粉丝"
                            android:textColor="#ff303030"
                            android:textSize="@dimen/sp_12"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mine_share"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/share_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/share_click"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="分享好友"
                            android:textColor="#ff303030"
                            android:textSize="@dimen/sp_12"/>

                    </LinearLayout>

                </LinearLayout>

                <com.youth.banner.Banner
                    android:id="@+id/mine_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_below="@id/three"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/default_banner"
                    android:visibility="gone">

                </com.youth.banner.Banner>

                <LinearLayout
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_154"
                    android:layout_below="@id/mine_banner"
                    android:layout_marginLeft="@dimen/dp_15"

                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/bg_corner_search_dialog"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/mine_save"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/mine_img_save"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:text="我的收藏"
                                android:textColor="#ff303030"
                                android:textSize="@dimen/sp_12"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mine_comment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/mine_img_comment"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:text="我的评论"
                                android:textColor="#ff303030"
                                android:textSize="@dimen/sp_12"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mine_address"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/mine_img_address"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:text="收货地址"
                                android:textColor="#ff303030"
                                android:textSize="@dimen/sp_12"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mine_materiel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/mine_img_wuliao"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:text="地推物料"
                                android:textColor="#ff303030"
                                android:textSize="@dimen/sp_12"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/mine_send"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/mine_img_send"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:text="发圈文案"
                                android:textColor="#ff303030"
                                android:textSize="@dimen/sp_12"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mine_course"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/mine_img_jiaocheng"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:text="新手教程"
                                android:textColor="#ff303030"
                                android:textSize="@dimen/sp_12"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mine_problem"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/mine_img_faq"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:text="常见问题"
                                android:textColor="#ff303030"
                                android:textSize="@dimen/sp_12"/>

                        </LinearLayout>

                        <LinearLayout
