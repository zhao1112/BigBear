<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds20"
        android:background="#F7F7F7" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds72">

        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ds30"
            android:text="状态到底是什么----"
            android:textColor="@color/main_color"
            android:textSize="@dimen/ds24" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/goods_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds184"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_pic"
            android:layout_width="@dimen/ds144"
            android:layout_height="@dimen/ds144"
            android:layout_marginLeft="@dimen/ds30"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds20"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="1000"
                android:textColor="#333333"
                android:textSize="@dimen/ds28" />

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds12"
                android:gravity="center_vertical"
                android:text="1000"
                android:textColor="#23A064"
                android:textSize="@dimen/ds28" />

        </LinearLayout>

        <TextView
            android:id="@+id/goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds30"
            android:layout_marginRight="@dimen/ds60"
            android:text="X11"
            android:textSize="@dimen/ds26" />

    </LinearLayout>

    <include layout="@layout/line" />

    <include
        android:id="@+id/order_footer_view"
        layout="@layout/item_order_footer" />

</LinearLayout>