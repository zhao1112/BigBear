<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/actionbar_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds2"
        android:background="#F7F7F7" />

    <ImageView
        android:layout_width="@dimen/ds140"
        android:layout_height="@dimen/ds96"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds120"
        android:background="@drawable/loading_center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds20"
        android:text="大熊商城"
        android:textColor="#000"
        android:textSize="@dimen/ds40" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds40"
        android:layout_marginTop="120pt"
        android:layout_marginRight="@dimen/ds40"
        android:layout_marginBottom="@dimen/ds40"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="官方微信公众号"
            android:textColor="#333333"
            android:textSize="@dimen/ds32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bbearmall"
            android:textColor="#666666"
            android:textSize="@dimen/ds32" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds2"
        android:layout_marginLeft="@dimen/ds40"
        android:layout_marginRight="@dimen/ds40"
        android:background="#F7F7F7" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ds40"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商务合作微信"
            android:textColor="#333333"
            android:textSize="@dimen/ds32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bearmall8"
            android:textColor="#666666"
            android:textSize="@dimen/ds32" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds2"
        android:layout_marginLeft="@dimen/ds40"
        android:layout_marginRight="@dimen/ds40"
        android:background="#F7F7F7" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright©2004-2019"
            android:textColor="#888888"
            android:textSize="@dimen/ds24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大熊商城版权所有"
            android:textColor="#888888"
            android:textSize="@dimen/ds24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前版本1.0"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <TextView
            android:id="@+id/chenck_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ds40"
            android:text="检查升级"
            android:textColor="@color/main_color"
            android:textSize="@dimen/ds28" />
    </LinearLayout>


</LinearLayout>