<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="@dimen/ds560"
        android:layout_height="@dimen/ds336"
        android:background="#ffffff"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds50"
                android:layout_marginTop="@dimen/ds50"
                android:layout_marginRight="@dimen/ds50"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/ds32" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds72"
            android:layout_marginBottom="@dimen/ds50"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/_ok"
                    android:layout_width="462pt"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_green_1"
                    android:gravity="center"
                    android:text="我知道了"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/ds28" />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>