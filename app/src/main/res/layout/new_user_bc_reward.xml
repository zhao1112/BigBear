<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bg_one"
            android:layout_centerInParent="true"
            android:background="@drawable/get_bc_dialog_bg"
            android:layout_width="522pt"
            android:layout_height="657pt" />
        <ImageView
            android:id="@+id/bg_two"
            android:background="@drawable/get_bc_dialog_top"
            android:layout_width="642pt"
            android:layout_height="252pt" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="199"
                android:id="@+id/bc_number"
                android:textColor="#ffe248"
                android:layout_marginTop="@dimen/ds100"
                android:textSize="@dimen/ds120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="BC"
                android:textColor="#ffe248"
                android:layout_marginTop="95pt"
                android:textSize="@dimen/ds40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>



        <ImageView
            android:id="@+id/bg_three"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/ds35"
            android:background="@drawable/get_bc_dialog_in"
            android:layout_width="@dimen/ds250"
            android:layout_height="@dimen/ds90"
            android:layout_alignBottom="@+id/bg_one"/>
    </RelativeLayout>


</RelativeLayout>