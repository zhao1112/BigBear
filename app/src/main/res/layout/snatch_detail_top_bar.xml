<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds128">

    <RelativeLayout
        android:id="@+id/transparent_status_head_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:alpha="1">


        <RelativeLayout
            android:id="@+id/transparent_status_head_back"
            android:layout_width="@dimen/ds64"
            android:layout_height="@dimen/ds64"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds20"
            android:background="@drawable/btn_back_circle_bg">

            <ImageView
                android:id="@+id/transparent_status_back_img"
                android:layout_width="@dimen/ds44"
                android:layout_height="@dimen/ds44"
                android:src="@drawable/icon_nav_arrow"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/transparent_status_share"
            android:layout_width="@dimen/ds64"
            android:layout_height="@dimen/ds64"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ds20"
            android:background="@drawable/btn_back_circle_bg">

            <ImageView
                android:id="@+id/transparent_status_share_img"
                android:layout_width="@dimen/ds44"
                android:layout_height="@dimen/ds44"
                android:src="@drawable/icon_nav_share"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>


    </RelativeLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:alpha="0"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/show_status_back_img"
                android:layout_width="@dimen/ds44"
                android:layout_height="@dimen/ds44"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ds30"
                android:src="@drawable/icon_nav_arrow"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32pt"
                android:textColor="#333333"
                android:layout_centerInParent="true"
                android:text="夺宝详情"
                />

            <ImageView
                android:id="@+id/show_status_share_img"
                android:layout_width="@dimen/ds44"
                android:layout_height="@dimen/ds44"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ds30"
                android:src="@drawable/icon_nav_share"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds2"
                android:layout_alignParentBottom="true"
                android:background="#E7E7E7"></View>


        </RelativeLayout>




    </android.support.design.widget.AppBarLayout>

</RelativeLayout>