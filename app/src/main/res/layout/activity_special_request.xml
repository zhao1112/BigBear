<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/actionbar_layout" />

    <View
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds0.33"
        />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds30"
        android:layout_marginTop="@dimen/ds56"
        android:text="邀请挚友，共享尊贵特权！"
        android:textColor="#333333"
        android:textSize="@dimen/ds36"
        />

    <ImageView
        android:layout_marginTop="@dimen/ds38"
        android:layout_gravity="center"
        android:src="@drawable/special_top_bg"
        android:layout_width="@dimen/ds690"
        android:layout_height="@dimen/ds250" />

    <RelativeLayout
        android:background="@drawable/spec_center_bg"
        android:layout_marginTop="@dimen/ds60"
        android:layout_gravity="center"
        android:layout_width="@dimen/ds690"
        android:layout_height="@dimen/ds238">
        <TextView
            android:layout_marginTop="@dimen/ds40"
            android:layout_centerHorizontal="true"
            android:id="@+id/tip_top"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="他通过您的邀请，加入会员只需"
            android:textColor="#333333"
            android:textSize="@dimen/ds36"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/ds36"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tip_top"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/price_new"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E75B56"
                android:textSize="@dimen/ds60"
                />
            <TextView
                android:layout_marginLeft="@dimen/ds8"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#333333"
                android:textSize="@dimen/ds28"
                />

            <TextView
                android:id="@+id/price_old"
                android:layout_marginLeft="@dimen/ds30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cost_price_bg"
                android:textColor="#999999"
                android:textSize="@dimen/ds28"
                />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tip_b_1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="送出后您得    元现金，好友得    元话费"
        android:textColor="#333333"
        android:textSize="@dimen/ds32"
        />

    <TextView
        android:id="@+id/tip_b_2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动日期："
        android:textColor="#999999"
        android:textSize="@dimen/ds28"
        />
    
    <Button
        android:id="@+id/request_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/ds32"
        android:text="邀请TA"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds60"
        android:background="@drawable/request_btn_bg"
        android:layout_width="@dimen/ds560"
        android:layout_height="@dimen/ds96" />

    <TextView
        android:id="@+id/tip_b_3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本次活动还可邀请  名好友"
        android:textColor="#999999"
        android:textSize="@dimen/ds24"
        />

    <TextView
        android:id="@+id/tip_b_4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看邀请记录"
        android:background="@drawable/cost_jilu_bg"
        android:textColor="#333"
        android:textSize="@dimen/ds28"
        />
</LinearLayout>