<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.newversions.InviteFriendActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88pt"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20pt"
            android:padding="5dp"
            android:src="@drawable/icon_backs" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="邀请好友"
            android:textColor="#333333"
            android:textSize="32pt" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds0.33"
        android:background="#F7F7F7" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds30"
        android:layout_marginTop="@dimen/ds56"
        android:text="邀请挚友，共享尊贵特权！"
        android:textColor="#333333"
        android:textSize="@dimen/ds36"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="@dimen/ds690"
        android:layout_height="@dimen/ds250"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ds38"
        android:src="@drawable/special_top_bg" />


    <RelativeLayout
        android:layout_width="@dimen/ds690"
        android:layout_height="@dimen/ds238"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ds60"
        android:background="@drawable/spec_center_bg">

        <TextView
            android:id="@+id/tip_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ds40"
            android:text="他通过您的邀请，加入会员只需"
            android:textColor="#333333"
            android:textSize="@dimen/ds36"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tip_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ds36"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E75B56"
                android:textSize="@dimen/ds60"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds8"
                android:text="元"
                android:textColor="#333333"
                android:textSize="@dimen/ds28"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds30"
                android:background="@drawable/cost_price_bg"
                android:textColor="#999999"
                android:textSize="@dimen/ds28" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tip_b_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds60"
        android:text="送出后您得    元现金，好友得    元话费"
        android:textColor="#333333"
        android:textSize="@dimen/ds32" />

    <Button
        android:id="@+id/request_btn"
        android:layout_width="@dimen/ds560"
        android:layout_height="@dimen/ds96"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds60"
        android:background="@drawable/request_btn_bg"
        android:text="邀请TA"
        android:textColor="@color/white"
        android:textSize="@dimen/ds32" />


</LinearLayout>
