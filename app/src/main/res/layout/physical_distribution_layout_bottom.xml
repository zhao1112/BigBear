<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingRight="@dimen/ds10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds128">


        <View
            android:id="@+id/view_1"
            android:layout_width="@dimen/ds2"
            android:layout_height="match_parent"
            android:layout_above="@id/img"
            android:layout_marginLeft="@dimen/ds39"
            android:background="@color/main_color" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/ds20"
            android:layout_height="@dimen/ds20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds30"
            android:background="@drawable/yuan" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds28"
            android:layout_toRightOf="@id/img"
            android:text="退款成功"
            android:textColor="#333333"
            android:textSize="@dimen/ds24" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds28"
            android:layout_marginTop="@dimen/ds10"
            android:layout_toRightOf="@id/img"
            android:text="2018-08-08 10:55:55"
            android:textColor="#999999"
            android:textSize="@dimen/ds20" />


    </RelativeLayout>


</RelativeLayout>
