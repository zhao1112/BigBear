<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/wit_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/bg_corner_search_dialog"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ffff4040"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/wit_cancel"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/bg_corner_search_dialog"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center"
                android:text="选择提现方"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_13"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="#ffe1e1e1"/>

            <LinearLayout
                android:id="@+id/wit_zfb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:gravity="center"
                    android:text="提现到支付宝"
                    android:textColor="#ff1f89ff"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="@dimen/dp_33"
                    android:layout_height="@dimen/dp_14"
                    android:src="@mipmap/tuijian"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="#ffe1e1e1"/>

            <TextView
                android:id="@+id/wit_wx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:text="提现到微信"
                android:textColor="#ff1f89ff"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="#ffe1e1e1"/>

            <TextView
                android:id="@+id/wit_yhk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:text="提现到银行卡"
                android:textColor="#ff1f89ff"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>