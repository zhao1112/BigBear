<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    tools:context="com.newversions.passwd.PwdActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds80"
        android:background="#ffffff">


        <RelativeLayout
            android:id="@+id/new_version_back"
            android:layout_width="@dimen/ds74"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/ds30">

            <ImageView
                android:layout_width="@dimen/ds44"
                android:layout_height="@dimen/ds44"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_backs" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="余额支付密码"
            android:textColor="#333333"
            android:textSize="@dimen/ds32" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/new_version_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds104"
        android:layout_marginTop="@dimen/ds15"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds30"
            android:text="修改支付密码"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <ImageView
            android:layout_width="@dimen/ds30"
            android:layout_height="@dimen/ds30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ds30"
            android:src="@drawable/arrow_right" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds1"
        android:background="#E7E7E7" />

    <RelativeLayout
        android:id="@+id/new_version_reset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds104"
        android:background="#ffffff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds30"
            android:text="找回支付密码"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <ImageView
            android:layout_width="@dimen/ds30"
            android:layout_height="@dimen/ds30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ds30"
            android:src="@drawable/arrow_right" />

    </RelativeLayout>

</LinearLayout>
