<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds750"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/product_img_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


    <RelativeLayout
        android:layout_width="68pt"
        android:layout_height="32pt"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_product_img"
        android:layout_marginRight="@dimen/ds30"
        android:layout_marginBottom="@dimen/ds30"
        >

        <TextView
            android:id="@+id/product_img_selector_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="0/0"
            android:textSize="24pt"/>

    </RelativeLayout>

</RelativeLayout>