<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="134pt">

      <TextView
          android:id="@+id/item_1"
          android:layout_width="0pt"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:layout_marginLeft="@dimen/ds18"
          android:textColor="#333333"
          android:textStyle="bold"
          android:textSize="32pt" />

      <RelativeLayout
          android:paddingLeft="@dimen/ds10"
          android:id="@+id/top"
          android:layout_gravity="center"
          android:layout_width="0pt"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:gravity="center"
          android:orientation="vertical">

          <TextView
              android:id="@+id/item_2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#333333"
              android:textSize="24pt" />

          <TextView
              android:id="@+id/item_3"
              android:layout_marginTop="@dimen/ds8"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/item_2"
              android:textColor="#999999"
              android:textSize="24pt" />


      </RelativeLayout>


      <LinearLayout
          android:layout_width="0pt"
          android:layout_weight="2"
          android:layout_height="match_parent"
          android:gravity="center"
          android:orientation="vertical">

          <TextView
              android:id="@+id/item_4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:textColor="#999999"
              android:textSize="24pt" />

          <TextView
              android:id="@+id/item_5"
              android:layout_marginTop="@dimen/ds8"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:textColor="#999999"
              android:textSize="24pt" />


      </LinearLayout>

      <TextView
          android:id="@+id/item_6"
          android:layout_width="0pt"
          android:layout_marginRight="@dimen/ds18"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:textColor="#333333"
          android:textSize="28pt" />
  </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/ds30"
        android:background="#E7E7E7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds0.33"/>

</LinearLayout>