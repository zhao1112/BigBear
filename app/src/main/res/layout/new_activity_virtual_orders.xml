<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    tools:context="com.newversions.detail.order.VirtualOrdersActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds80"
        android:background="#ffffff">


        <RelativeLayout
            android:id="@+id/new_version_back"
            android:layout_width="@dimen/ds74"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/ds30">

            <ImageView
                android:layout_width="@dimen/ds44"
                android:layout_height="@dimen/ds44"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_backs" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="#333333"
            android:textSize="@dimen/ds32" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds168"
        android:background="@drawable/bg_green_3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/ds72"
            android:layout_height="@dimen/ds72"
            android:layout_marginLeft="@dimen/ds30"
            android:src="@drawable/icon_order_daifukuan" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds30"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等待买家付款"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/ds28" />


            <TextView
                android:id="@+id/status_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds8"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="@dimen/ds24" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds100"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/ds60"
            android:layout_height="@dimen/ds60"
            android:layout_marginLeft="@dimen/ds30"
            android:src="@drawable/new_version_touxiang" />


        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds30"
            android:text=""
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds184"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgage"
            android:layout_width="@dimen/ds144"
            android:layout_height="@dimen/ds144"
            android:layout_marginLeft="@dimen/ds30" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds30"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/ds28" />


            <TextView
                android:id="@+id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds8"
                android:textColor="#23A064"
                android:textSize="@dimen/ds28" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds86"
        android:layout_marginTop="@dimen/ds20"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds30"
            android:layout_weight="1"
            android:text="商品金额"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <TextView
            android:id="@+id/good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ds30"
            android:textColor="#23A064"
            android:textSize="@dimen/ds28" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds86"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds30"
            android:layout_weight="1"
            android:text="优惠金额"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <TextView
            android:id="@+id/youhui_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ds30"
            android:textColor="#23A064"
            android:textSize="@dimen/ds28" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds86"
        android:layout_marginTop="@dimen/ds2"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds30"
            android:layout_weight="1"
            android:text="需付款"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <TextView
            android:id="@+id/zhifu_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ds30"
            android:textColor="#23A064"
            android:textSize="@dimen/ds28" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds180"
        android:layout_marginTop="@dimen/ds20"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/ds30"
        android:paddingRight="@dimen/ds30">

        <TextView
            android:id="@+id/ding_dan_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号：123456789987654321"
            android:textColor="#909392"
            android:textSize="@dimen/ds24" />

        <TextView
            android:id="@+id/da_xiong_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds8"
            android:text="大熊交易号：123456789987654321123456789987654321"
            android:textColor="#909392"
            android:textSize="@dimen/ds24" />

        <TextView
            android:id="@+id/chuang_jian_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds8"
            android:text="创建时间：123456789987654321"
            android:textColor="#909392"
            android:textSize="@dimen/ds24" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:id="@+id/order_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds100"
        android:background="#ffffff"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/order_cancel"
            android:layout_width="@dimen/ds140"
            android:layout_height="@dimen/ds52"
            android:layout_marginRight="@dimen/ds30"
            android:background="@drawable/address_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="@dimen/ds24" />

        <Button
            android:id="@+id/order_go_pay"
            android:layout_width="@dimen/ds140"
            android:layout_height="@dimen/ds52"
            android:layout_marginRight="@dimen/ds30"
            android:background="@drawable/address_bg_green1"
            android:gravity="center"
            android:text="去付款"
            android:textColor="#ffffff"
            android:textSize="@dimen/ds24" />

        <Button
            android:id="@+id/order_del"
            android:layout_width="@dimen/ds140"
            android:layout_height="@dimen/ds52"
            android:layout_marginRight="@dimen/ds30"
            android:background="@drawable/address_bg"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="#666666"
            android:textSize="@dimen/ds24" />


    </LinearLayout>


</LinearLayout>
