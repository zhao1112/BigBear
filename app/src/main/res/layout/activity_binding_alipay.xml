<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff1f1f1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/icon_backs"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="绑定支付宝"
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_16"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_18"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="真实姓名"
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_14"/>

        <com.yunqin.bearmall.widget.DelEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_23"
            android:background="@null"
            android:hint="请输入支付宝认证的真实姓名"
            android:maxLines="1"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/name_t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_23"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入支付宝认证的真实姓名"
            android:maxLines="1"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#fff1f1f1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="支付宝号"
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_14"/>

        <com.yunqin.bearmall.widget.DelEditText
            android:id="@+id/alip_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_23"
            android:background="@null"
            android:hint="请输入支付宝账号"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/alip_code_t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_23"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入支付宝账号"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/alip_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_21"
        android:background="@drawable/updata_phone"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_15"/>

</LinearLayout>