<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/vip_view_partner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/bg_corner_search_dialog"
       android:visibility="gone">

        <RelativeLayout
            android:id="@+id/top_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/partner_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晋升任务"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/vip_partner_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_toLeftOf="@id/partner_tips"
                android:text="升级说明"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_12"/>

            <ImageView
                android:id="@+id/partner_tips"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/vip_tips"/>

        </RelativeLayout>

        <View
            android:id="@+id/partner_vie"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/top_partner"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffe1e1e1"/>

        <RelativeLayout
            android:id="@+id/partner_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/partner_vie"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/vip_partner_one_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直邀超级会员50人以上"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

            <LinearLayout
                android:id="@+id/partner_one1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_partner_one_text1"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/vip_partner_bar_one1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_5"
                    android:progressDrawable="@drawable/vip_personal_center"/>

                <TextView
                    android:id="@+id/vip_partner_text_one1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="2/50人"
                    android:textColor="#ff555555"
                    android:textSize="@dimen/sp_9"/>

            </LinearLayout>

            <TextView
                android:id="@+id/vip_partner_one_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/partner_one1"
                android:layout_marginTop="@dimen/dp_14"
                android:text="团队超级会员5000人以上"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

            <LinearLayout
                android:id="@+id/partner_one2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_partner_one_text2"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/vip_partner_bar_one2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_5"
                    android:progressDrawable="@drawable/vip_personal_center"/>

                <TextView
                    android:id="@+id/vip_partner_text_one2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="2/5000人"
                    android:textColor="#ff555555"
                    android:textSize="@dimen/sp_9"/>

            </LinearLayout>

            <TextView
                android:id="@+id/vip_partner_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/address_bg_green"
                android:paddingLeft="@dimen/dp_17"
                android:paddingTop="@dimen/dp_6"
                android:paddingRight="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_6"
                android:text="去邀请"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/partner_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/partner_one"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20">

            <TextView
                android:id="@+id/vip_partner_two_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活跃度20000以上"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_partner_two_text"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/vip_partner_bar_two"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_5"
                    android:progressDrawable="@drawable/vip_personal_center"/>

                <TextView
                    android:id="@+id/vip_partner_text_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="2/20000人"
                    android:textColor="#ff555555"
                    android:textSize="@dimen/sp_9"/>

            </LinearLayout>

            <TextView
                android:id="@+id/vip_partner_extension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/address_bg_green"
                android:paddingLeft="@dimen/dp_17"
                android:paddingTop="@dimen/dp_6"
                android:paddingRight="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_6"
                android:text="去推广"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>