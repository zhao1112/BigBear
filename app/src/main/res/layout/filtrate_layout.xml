<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/filtrate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/ds10"
        android:paddingLeft="@dimen/ds30"
        android:paddingTop="@dimen/ds10"
        android:text="TITLE"
        android:textColor="#000000"
        android:textSize="@dimen/ds28" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/filtrate_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/ds30"
        android:paddingRight="@dimen/ds30"
        app:layout_constraintTop_toBottomOf="@id/filtrate_title">

    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>