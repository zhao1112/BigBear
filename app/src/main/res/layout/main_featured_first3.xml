<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds280">
        <ImageView
            android:layout_marginLeft="@dimen/ds20"
            android:id="@+id/main_image_left"
            android:layout_width="0pt"
            android:layout_height="@dimen/ds260"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/default_home_ad_three"
             />

        <ImageView
            android:id="@+id/main_image_center"
            android:layout_width="0pt"
            android:layout_height="@dimen/ds260"
            android:layout_marginLeft="@dimen/ds10"
            android:layout_marginRight="@dimen/ds10"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/default_home_ad_three"
            />

        <ImageView
            android:layout_marginRight="@dimen/ds20"
            android:id="@+id/main_image_right"
            android:layout_width="0pt"
            android:layout_height="@dimen/ds260"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/default_home_ad_three"
            />
    </LinearLayout>




</LinearLayout>