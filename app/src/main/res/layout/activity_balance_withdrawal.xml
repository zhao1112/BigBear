<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.yunqin.bearmall.ui.activity.BalanceWithdrawalActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds80"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/new_version_back"
            android:layout_width="@dimen/ds74"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/ds30">

            <ImageView
                android:layout_width="@dimen/ds44"
                android:layout_height="@dimen/ds44"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_backs" />
        </RelativeLayout>

        <TextView
            android:id="@+id/new_version_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="余额提现"
            android:textColor="#333333"
            android:textSize="@dimen/ds32" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30pt"
        android:layout_marginTop="40pt"
        android:layout_marginRight="30pt"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="40pt"
        android:paddingRight="40pt">

        <LinearLayout
            android:id="@+id/yhk_visible"
            android:layout_width="match_parent"
            android:layout_height="166pt"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30pt"
                android:text="到账银行卡"
                android:textColor="#333333"
                android:textSize="32pt" />


            <LinearLayout
                android:id="@+id/select_bank_"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40pt"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30pt"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/bank_icon"
                        android:layout_width="48pt"
                        android:layout_height="48pt" />

                    <TextView
                        android:id="@+id/bank_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10pt"
                        android:textColor="#26468A"
                        android:textSize="32pt" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="58pt"
                    android:layout_marginTop="20pt"
                    android:text="3个工作日内到账"
                    android:textColor="#999999"
                    android:textSize="28pt" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/wx_visible"
            android:layout_width="match_parent"
            android:layout_height="166pt"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30pt"
                android:text="余额将提现至您绑定的微信账号"
                android:textColor="#333333"
                android:textSize="36pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:text="3个工作日内到账"
                android:textColor="#999999"
                android:textSize="28pt" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50pt"
            android:text="提现金额"
            android:textColor="#333333"
            android:textSize="32pt" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="124pt"
            android:layout_marginTop="30pt"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#333333"
                android:textSize="84pt" />

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18pt"
                android:background="@null"
                android:digits="0123456789."
                android:inputType="number"
                android:textColor="#333333"
                android:textSize="84pt" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:layout_marginTop="25pt"
            android:background="#CCCCCC" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前余额0.00元，"
                android:textColor="#999999"
                android:textSize="28pt" />

            <TextView
                android:id="@+id/all_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部提现"
                android:textColor="#26468A"
                android:textSize="28pt" />


        </LinearLayout>


        <Button
            android:id="@+id/ti_xian_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds72"
            android:layout_marginTop="@dimen/ds80"
            android:background="@drawable/new_version_pwd_button_selector"
            android:text="提现"
            android:textColor="@color/white"
            android:textSize="@dimen/ds28" />


    </LinearLayout>


</LinearLayout>
