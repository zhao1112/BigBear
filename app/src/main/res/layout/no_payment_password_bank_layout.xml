<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds80"
        android:layout_marginTop="50pt">

        <RelativeLayout
            android:id="@+id/new_version_back"
            android:layout_width="@dimen/ds74"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/ds30">

            <ImageView
                android:layout_width="@dimen/ds44"
                android:layout_height="@dimen/ds44"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_backs" />
        </RelativeLayout>

        <TextView
            android:id="@+id/new_version_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="银行卡"
            android:textColor="#333333"
            android:textSize="@dimen/ds32" />


        <TextView
            android:id="@+id/n_v_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/ds30"
            android:text="解除绑定"
            android:textColor="#333333"
            android:textSize="@dimen/ds28"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds1"
        android:background="#E7E7E7" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80pt"
        android:text="您还未设置余额支付密码，不能绑定银行卡"
        android:textColor="#333333"
        android:textSize="28pt" />


    <Button
        android:id="@+id/next_button"
        android:layout_width="620pt"
        android:layout_height="@dimen/ds72"
        android:layout_marginTop="120pt"
        android:background="@drawable/new_version_pwd_button_selector"
        android:text="去设置"
        android:textColor="@color/white"
        android:textSize="@dimen/ds28" />

</LinearLayout>