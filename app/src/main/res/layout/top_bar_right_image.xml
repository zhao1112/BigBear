<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="88pt">

    <ImageView
        android:id="@+id/toolbar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:src="@drawable/icon_backs" />



    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="49pt"
        android:layout_height="45pt"
        android:padding="10pt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/icon_nav_share"
        android:layout_marginRight="20pt"
        android:scaleType="center"
        />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/toolbar_back"
        app:layout_constraintRight_toLeftOf="@id/right_icon"
        android:layout_marginRight="20pt"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginStart="80pt"
        android:layout_marginEnd="80pt"
        android:textColor="#333333"
        android:gravity="center"
        android:textSize="32pt" />




</android.support.constraint.ConstraintLayout>