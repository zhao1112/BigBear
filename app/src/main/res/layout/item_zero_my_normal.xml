<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="302pt"
    android:layout_marginTop="@dimen/ds20"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="200pt"
            android:layout_height="200pt"
            android:layout_marginLeft="@dimen/ds30"
            android:layout_marginTop="@dimen/ds20" />

        <TextView
            android:id="@+id/pintuan_guimo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ds20"
            android:background="@drawable/zero_10_bg"
            android:paddingLeft="@dimen/ds8"
            android:paddingTop="@dimen/ds4"
            android:paddingRight="@dimen/ds8"
            android:paddingBottom="@dimen/ds4"
            android:text=""
            android:textColor="#D0021B"
            android:textSize="@dimen/ds20"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/ds20"
        android:layout_marginTop="@dimen/ds20"
        android:layout_marginRight="@dimen/ds30"
        android:orientation="vertical">

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ds80"
            android:lineSpacingExtra="@dimen/ds8"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds12"
            android:layout_marginTop="@dimen/ds20"
            android:progressDrawable="@drawable/progressbar_task" />

        <TextView
            android:id="@+id/join_people_number_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds15"
            android:text=""
            android:textColor="#333333"
            android:textSize="@dimen/ds20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds1"
            android:layout_marginTop="@dimen/ds22"
            android:background="#E7E7E7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="152pt"
                android:layout_height="@dimen/ds36"
                android:text="距离活动结束"
                android:textColor="#F5A623"
                android:textSize="@dimen/ds24" />

            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/countdown_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:isHideTimeBackground="true"
                app:isShowDay="false"
                app:isShowHour="true"
                app:isShowMillisecond="false"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:isTimeTextBold="false"
                app:suffixGravity="center"
                app:suffixTextColor="#F5A623"
                app:timeTextColor="#F5A623"
                app:timeTextSize="24pt" />

            <com.yunqin.bearmall.widget.Highlight.HighlightButton
                android:id="@+id/share_friend"
                android:layout_width="160pt"
                android:layout_height="@dimen/ds52"
                android:layout_marginLeft="@dimen/ds48"
                android:background="@drawable/bt_give_btn_focused"
                android:text="邀请好友"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/ds26" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>