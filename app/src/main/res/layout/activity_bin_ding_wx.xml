<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.yunqin.bearmall.ui.activity.BinDingWXActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_28"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:src="@drawable/icon_backs"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="微信号"
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/top_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:text="清空"
            android:textColor="#ff555555"
            android:textSize="@dimen/sp_14"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#ffe1e1e1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="微信号"
            android:textColor="#ff555555"
            android:textSize="@dimen/sp_14"/>

        <com.yunqin.bearmall.widget.DelEditText
            android:id="@+id/wx_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@null"
            android:hint="输入微信号，方便上下级联系您"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#ffc9c9c9"
            android:textSize="@dimen/sp_12"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#ffe1e1e1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_132"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#fff9f9f9">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wx_image"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:src="@mipmap/erweima"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="点击上传二维码"
                android:textColor="#ff272727"
                android:textSize="12sp"
                />

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/tijiao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_vip_up"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_16"/>


</LinearLayout>
