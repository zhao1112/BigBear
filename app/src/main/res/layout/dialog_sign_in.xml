<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/prgress_bar"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/ds750"
        android:layout_height="@dimen/ds750"
        android:background="@drawable/img_rote"
         />

    <LinearLayout
        android:layout_width="562pt"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-85pt"
        android:background="@drawable/sign_in_layout_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/center_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds15"
            android:layout_marginRight="@dimen/ds15"
            android:layout_marginTop="128pt"
            android:orientation="horizontal"
            android:weightSum="7">

        </LinearLayout>

        <com.yunqin.bearmall.widget.Highlight.HighlightButton
            android:id="@+id/sign_in"
            android:visibility="invisible"
            android:layout_width="484pt"
            android:layout_height="88pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/ds64"
            android:layout_marginTop="@dimen/ds54"
            android:background="@drawable/sign_in_btn_bg"
            android:text="签到"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/ds28"
           />

        <include
            android:id="@+id/success_layout"
            layout="@layout/item_sign_in_susscess"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:id="@+id/top_img"
        android:layout_width="400pt"
        android:layout_height="216pt"
        android:layout_marginTop="@dimen/ds120"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sign_in_bg" />


</RelativeLayout>