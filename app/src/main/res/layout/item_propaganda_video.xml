<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/app_bu_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_12">


            <com.yunqin.bearmall.widget.CircleImageView
                android:id="@+id/bus_image"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:scaleType="fitXY"
                android:src="@drawable/push"/>

            <TextView
                android:id="@+id/bus_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/bus_image"
                android:text="大熊酷朋"
                android:textColor="#ff272727"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/bus_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/bus_image"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_11"/>

            <LinearLayout
                android:id="@+id/share_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@drawable/shear_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:scaleType="fitXY"
                    android:src="@mipmap/share"/>

                <TextView
                    android:id="@+id/share_nume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="#ff24a064"
                    android:textSize="@dimen/sp_11"/>

            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/bus_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_12"
            android:textColor="#ff555555"
            android:textSize="@dimen/sp_13"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="@dimen/dp_15">

            <ImageView
                android:id="@+id/bus_video"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_222"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_centerInParent="true"
                android:background="@drawable/dkplayer_seekbar_thumb_pressed">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/dkplayer_ic_action_play_arrow"/>

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>