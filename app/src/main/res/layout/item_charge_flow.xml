<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="132pt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_charge_bg"
    >

    <TextView
        android:id="@+id/charge_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20MB"
        android:textColor="@color/selector_charge_price_text"
        android:textSize="40pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/charge_value"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/charge_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/charge_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="0.00å…ƒ"
        android:textSize="24pt"
        android:textColor="@color/selector_charge_sale_price_text"
        android:layout_marginTop="4pt"
        />



</android.support.constraint.ConstraintLayout>