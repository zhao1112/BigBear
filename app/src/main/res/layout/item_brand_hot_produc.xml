<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ds348"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/brand_hot_product_img"
        android:layout_width="@dimen/ds348"
        android:layout_height="@dimen/ds348"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds72"
        android:background="@drawable/price_bg"
        android:layout_marginTop="@dimen/ds30"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/ds20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直接购买"
                android:textColor="@color/main_color"
                android:textSize="@dimen/ds20" />

            <TextView
                android:id="@+id/brand_hot_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥0.00"
                android:textColor="@color/main_color"
                android:textSize="@dimen/ds24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/ds158">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大熊零售价"
                android:textColor="@color/white"
                android:textSize="@dimen/ds20" />

            <TextView
                android:id="@+id/brand_hot_product_bt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥0.00+BC0"
                android:textColor="@color/white"
                android:textSize="@dimen/ds24" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>