<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/make_image"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_12"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/make_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff272727"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/make_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@drawable/item_make_money"
                    android:drawableLeft="@mipmap/make_candy"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_5"
                    android:textColor="#fff97600"
                    android:textSize="@dimen/sp_11"/>


            </LinearLayout>

            <TextView
                android:id="@+id/make_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_11"/>


        </LinearLayout>

        <TextView
            android:id="@+id/make_clack"
            android:layout_width="@dimen/dp_70"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:textSize="@dimen/sp_11"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="#fff1f1f1"/>

</LinearLayout>