<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_corner_search_dialog">

        <TextView
            android:id="@+id/creat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/sp_16"
            android:text="创建：2019-11-25 13:58:00"
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_15"
            android:text="已付款"
            android:textColor="#ff24a064"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/division"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/creat_time"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#fff1f1f1"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_below="@id/division"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/division"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_toRightOf="@id/image"
            android:ellipsize="end"
            android:lines="2"
            android:text="好吉利30包手帕纸便携纸巾餐巾纸卫生纸随身装面巾纸小包实惠装"
            android:textColor="#ff272727"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/division2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/image"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#fff1f1f1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/division2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/image">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:text="￥100"
                android:textColor="#fffb4023"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/order_commission_all"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_4"
                android:text="预估返佣30元"
                android:textColor="#888888"
                android:textSize="@dimen/sp_12"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/division2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:text="订单编号：1234567890"
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/division2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/order_text"
            android:paddingLeft="@dimen/dp_24"
            android:paddingTop="@dimen/dp_8"
            android:paddingRight="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_8"
            android:text="复制"
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_12"/>

    </RelativeLayout>

</LinearLayout>