<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.newversions.ServiceActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds80"
        android:background="#ffffff">


        <RelativeLayout
            android:id="@+id/new_version_back"
            android:layout_width="@dimen/ds74"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/ds30">

            <ImageView
                android:layout_width="@dimen/ds44"
                android:layout_height="@dimen/ds44"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_backs" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="客服中心"
            android:textColor="#333333"
            android:textSize="@dimen/ds32" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds30"
        android:layout_marginTop="@dimen/ds60"
        android:text="请添加微信公众号联系客服："
        android:textColor="#333333"
        android:textSize="@dimen/ds32" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds30"
        android:layout_marginTop="@dimen/ds44"
        android:text="搜索微信公众号：bbearmall"
        android:textColor="#333333"
        android:textSize="@dimen/ds28" />


    <ImageView
        android:layout_width="@dimen/ds300"
        android:layout_height="@dimen/ds300"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/ds30"
        android:layout_marginTop="@dimen/ds44"
        android:src="@drawable/keefuzhongxin" />


</LinearLayout>
