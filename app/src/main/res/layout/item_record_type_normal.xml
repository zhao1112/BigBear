<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150pt"
    android:background="@drawable/selector_bg"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/record_image"
        android:layout_width="72pt"
        android:layout_height="72pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="30pt"
        />

    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="12pt"
        android:layout_height="24pt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="32pt"
        android:src="@drawable/arrow_right"
        />

    <TextView
        android:id="@+id/record_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#23A064"
        android:textSize="32pt"
        android:text="0"
        app:layout_constraintRight_toRightOf="@id/right_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="30pt"
        />

    <TextView
        android:id="@+id/record_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/record_image"
        app:layout_constraintRight_toLeftOf="@id/record_count"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:text="其他"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="28pt"
        android:textColor="#333333"
        />




    
</android.support.constraint.ConstraintLayout>