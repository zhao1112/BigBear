<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ds20"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="194pt"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30pt"
            android:layout_marginTop="@dimen/ds40"
            android:text="用户资料"
            android:textColor="#333333"
            android:textSize="@dimen/ds32" />

        <LinearLayout
            android:id="@+id/user_head_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30pt"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="头像"
                android:textColor="#333333"
                android:textSize="@dimen/ds28" />

            <com.yunqin.bearmall.widget.CircleImageView
                android:id="@+id/user_head_img"
                android:layout_width="60pt"
                android:layout_height="@dimen/ds60"
                android:layout_marginRight="@dimen/ds50"
                android:src="@drawable/mine_user_icon_defult" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds2"
        android:layout_marginLeft="@dimen/ds30"
        android:background="#F7F7F7" />

    <LinearLayout
        android:id="@+id/change_nickname_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds100"
        android:layout_marginLeft="30pt"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="昵称"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <TextView
            android:id="@+id/user_id_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ds50"
            android:textColor="#999999"
            android:textSize="@dimen/ds24" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds2"
        android:layout_marginLeft="@dimen/ds30"
        android:background="#F7F7F7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds110"
        android:layout_marginLeft="30pt"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="身份标识"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ds30">

            <TextView
                android:id="@+id/user_level"
                android:layout_width="150pt"
                android:layout_height="@dimen/ds32"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ds10"
                android:background="@drawable/bear_level_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/ds18"
                android:textColor="@color/white"
                android:textSize="@dimen/ds20" />

            <ImageView
                android:layout_width="@dimen/ds36"
                android:layout_height="@dimen/ds36"
                android:src="@drawable/icon_mine_vip" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>