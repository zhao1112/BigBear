<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/vip_view_v1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/bg_corner_search_dialog"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/top_v1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/v1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晋升任务"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/vip_v1_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_toLeftOf="@id/v1_tips"
                android:text="升级说明"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_12"/>

            <ImageView
                android:id="@+id/v1_tips"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/vip_tips"/>

        </RelativeLayout>

        <View
            android:id="@+id/v1_vie"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/top_v1"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffe1e1e1"/>

        <RelativeLayout
            android:id="@+id/v1_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1_vie"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/vip_v1_one_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直邀超级会员30人以上"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_v1_one_text"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/vip_v1_bar_one"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_5"
                    android:progressDrawable="@drawable/vip_personal_center"/>

                <TextView
                    android:id="@+id/vip_v1_text_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="2/30人"
                    android:textColor="#ff555555"
                    android:textSize="@dimen/sp_9"/>

            </LinearLayout>

            <TextView
                android:id="@+id/vip_v1_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/address_bg_green"
                android:paddingLeft="@dimen/dp_17"
                android:paddingTop="@dimen/dp_6"
                android:paddingRight="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_6"
                android:text="去邀请"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/v1_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1_one"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/vip_v1_two_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直邀或间接超级会员100人以上"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_v1_two_text"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/vip_v1_bar_two"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_5"
                    android:progressDrawable="@drawable/vip_personal_center"/>

                <TextView
                    android:id="@+id/vip_v1_text_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="2/100人"
                    android:textColor="#ff555555"
                    android:textSize="@dimen/sp_9"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/v1_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1_two"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20">

            <TextView
                android:id="@+id/vip_v1_three_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活跃度3000以上"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_v1_three_text"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/vip_v1_bar_three"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_5"
                    android:progressDrawable="@drawable/vip_personal_center"/>

                <TextView
                    android:id="@+id/vip_v1_text_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="2/3000人"
                    android:textColor="#ff555555"
                    android:textSize="@dimen/sp_9"/>

            </LinearLayout>

            <TextView
                android:id="@+id/vip_v1_extension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/address_bg_green"
                android:paddingLeft="@dimen/dp_17"
                android:paddingTop="@dimen/dp_6"
                android:paddingRight="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_6"
                android:text="去推广"
                android:textColor="#ff303030"
                android:textSize="@dimen/sp_12"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>