<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:layout_width="@dimen/ds216"
        android:layout_height="@dimen/ds208"
        android:src="@drawable/img_bm" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds50"
        android:text="暂无数据"
        android:textColor="#999999"
        android:textSize="@dimen/ds34" />

    <com.yunqin.bearmall.widget.Highlight.HighlightButton
        android:id="@+id/login_btn"
        android:layout_width="200pt"
        android:layout_height="@dimen/ds72"
        android:layout_marginTop="40pt"
        android:background="@drawable/bg_normal"
        android:text="登录"
        android:textColor="#666666"
        android:textSize="@dimen/ds28" />


</LinearLayout>