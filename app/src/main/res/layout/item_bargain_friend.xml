<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingBottom="@dimen/ds10"
        android:paddingTop="@dimen/ds10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <com.yunqin.bearmall.widget.CircleImageView
            android:id="@+id/item_bargain_friend_head_img"
            android:layout_width="@dimen/ds60"
            android:layout_height="@dimen/ds60"
            android:src="@drawable/mine_user_icon_defult"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/ds30"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_bargain_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拼多多"
                android:textSize="@dimen/ds24"
                android:textColor="#DAFFF3"
                />

            <TextView
                android:id="@+id/item_bargain_friend_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来一起砍价0元拿"
                android:textColor="#DAFFF3"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/ds24"/>



        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/ds28"
            android:layout_height="@dimen/ds28"
            android:src="@drawable/ic_bargain_tip"/>

        <TextView
            android:id="@+id/item_bargain_friend_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds8"
            android:text="砍掉¥7.20"
            android:textSize="@dimen/ds24"
            android:textColor="#DAFFF3"
            />

    </LinearLayout>

</LinearLayout>