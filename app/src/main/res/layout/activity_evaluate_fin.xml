<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.activity.EvaluateFinActivity">

    <include layout="@layout/actionbar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/ds446"
            android:layout_height="@dimen/ds260"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ds20"
            android:src="@drawable/img_pingjia_wancheng" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ds40"
            android:text="评价成功"
            android:textColor="@color/main_color"
            android:textSize="@dimen/ds36" />


        <TextView
            android:id="@+id/check_pingjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/ds60"
            android:layout_marginTop="@dimen/ds20"
            android:background="@drawable/address_bg"
            android:paddingBottom="@dimen/ds12"
            android:paddingLeft="@dimen/ds48"
            android:paddingRight="@dimen/ds48"
            android:paddingTop="@dimen/ds12"
            android:text="查看我的评价"
            android:textColor="#666666"
            android:textSize="@dimen/ds24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7F7"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/ds20"
            android:paddingTop="@dimen/ds20"
            android:text="- 继续评价 -"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:scrollbars="none">

        </ListView>


    </LinearLayout>


</LinearLayout>