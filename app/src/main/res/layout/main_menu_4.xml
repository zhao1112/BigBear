<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_marginBottom="@dimen/ds20"
        android:layout_marginTop="@dimen/ds20"
        android:background="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds172">
        <com.yunqin.bearmall.widget.LinearMenu
            android:id="@+id/menu_spell_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.yunqin.bearmall.widget.LinearMenu
            android:id="@+id/menu_free_obtain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.yunqin.bearmall.widget.LinearMenu
            android:id="@+id/menu_sweets_snatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.yunqin.bearmall.widget.LinearMenu
            android:id="@+id/menu_daily_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>