<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="622pt"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="102pt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/selector_main_color_press"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="32pt"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textColor="#333333"
            android:textSize="64pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="66pt"
            />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="80pt"
            app:layout_constraintTop_toBottomOf="@id/price"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40pt"
            android:paddingLeft="30pt"
            >

            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="订单信息:"
                android:textSize="28pt"
                android:textColor="#333333"
                />

            <TextView
                android:id="@+id/godds_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/text_1"
                android:layout_marginLeft="30pt"
                android:maxLines="1"
                android:gravity="right"
                android:textSize="28pt"
                android:textColor="#333333"
                android:layout_marginRight="30pt"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="1pt"
                android:background="#E7E7E7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/text_1"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/pay_container"
            android:layout_width="match_parent"
            android:layout_height="80pt"
            app:layout_constraintTop_toBottomOf="@id/layout_1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingLeft="30pt"
            android:background="@drawable/selector_bg"
            >

            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="支付方式:"
                android:textSize="28pt"
                android:textColor="#333333"
                />

            <ImageView
                android:id="@+id/image"
                android:layout_width="12pt"
                android:layout_height="24pt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="30pt"
                android:src="@drawable/arrow_right"
                />

            <TextView
                android:id="@+id/pay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="30pt"
                android:maxLines="1"
                android:gravity="right"
                android:textSize="28pt"
                android:textColor="#333333"
                android:layout_marginRight="30pt"
                android:text="余额支付"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="1pt"
                android:background="#E7E7E7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/text_2"
                app:layout_constraintRight_toRightOf="parent"
                />

        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>




</android.support.constraint.ConstraintLayout>