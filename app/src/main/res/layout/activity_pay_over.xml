<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/actionbar_layout" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/ds446"
                    android:layout_height="@dimen/ds260"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ds20"
                    android:src="@drawable/img_pingjia_wancheng" />


                <TextView
                    android:id="@+id/pay_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/ds40"
                    android:text="支付成功"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/ds36" />


                <TextView
                    android:id="@+id/go_to_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/ds60"
                    android:layout_marginTop="@dimen/ds30"
                    android:background="@drawable/address_bg"
                    android:paddingBottom="@dimen/ds12"
                    android:paddingLeft="@dimen/ds48"
                    android:paddingRight="@dimen/ds48"
                    android:paddingTop="@dimen/ds12"
                    android:text="查看我的订单"
                    android:textColor="#666666"
                    android:textSize="@dimen/ds24" />
            </LinearLayout>


            <com.yunqin.bearmall.widget.CustomRecommendView
                android:id="@+id/recommend_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.yunqin.bearmall.widget.CustomRecommendView>
        </LinearLayout>


    </ScrollView>


</LinearLayout>