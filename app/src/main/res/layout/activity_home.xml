<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/ho_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@color/md_white"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home_home"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/home_color"
            android:textSize="@dimen/dp_10"/>

        <RadioButton
            android:id="@+id/make"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@color/md_white"
            android:button="@null"
            android:drawableTop="@drawable/home_business"
            android:gravity="center"
            android:text="赚钱中心"
            android:textColor="@color/home_color"
            android:textSize="@dimen/dp_10"/>

        <RadioButton
            android:id="@+id/business"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@color/md_white"
            android:button="@null"
            android:drawableTop="@drawable/home_make"
            android:gravity="center"
            android:text="素材圈"
            android:textColor="@color/home_color"
            android:textSize="@dimen/dp_10"/>

        <RadioButton
            android:id="@+id/zeor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@color/md_white"
            android:button="@null"
            android:drawableTop="@drawable/home_zeor"
            android:gravity="center"
            android:text="0元兑"
            android:textColor="@color/home_color"
            android:textSize="@dimen/dp_10"/>

        <RadioButton
            android:id="@+id/mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@color/md_white"
            android:button="@null"
            android:drawableTop="@drawable/home_mine"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/home_color"
            android:textSize="@dimen/dp_10"/>


    </RadioGroup>

</LinearLayout>