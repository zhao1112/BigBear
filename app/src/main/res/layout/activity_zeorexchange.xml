<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/banck"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_nav_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="糖果0元兑"
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_221"
        android:layout_below="@id/top_1"
        android:scaleType="fitXY"
        android:src="@mipmap/banner_bg" />

    <TextView
        android:id="@+id/guiz_zeor"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@id/top_1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/bg_zeor_guiz"
        android:gravity="center"
        android:text="规则说明"
        android:textColor="#ffffffff"
        android:textSize="@dimen/dp_12" />

    <RelativeLayout
        android:id="@+id/mine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/top"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="-16dp"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_corner_white">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_11">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="糖果数: "
                android:textColor="#ff272727"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/sume_zeor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="0"
                android:textColor="#ED3E11"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <TextView
            android:id="@+id/more_zeor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="去领糖果 >"
            android:textColor="#ffed3e11"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_zeor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mine"
        android:layout_marginTop="@dimen/dp_10">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>