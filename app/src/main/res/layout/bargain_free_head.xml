<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F7F7F7"
    android:layout_height="@dimen/ds88">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        app:elevation="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/bargain_free_back_img_layout"
                android:layout_width="@dimen/ds100"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="@dimen/ds44"
                    android:layout_height="@dimen/ds44"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ds30"
                    android:src="@drawable/icon_nav_arrow"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="砍价随意拿"
                android:textColor="@color/product_brand_name_color"
                android:textSize="@dimen/ds32"/>

            <TextView
                android:id="@+id/bargain_free_rule"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ds30"
                android:text="规则说明"
                android:textColor="@color/product_sell_count"
                android:textSize="@dimen/ds24"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds2"
                android:layout_alignParentBottom="true"
                android:background="#E7E7E7"></View>


        </RelativeLayout>




    </android.support.design.widget.AppBarLayout>

</android.support.constraint.ConstraintLayout>