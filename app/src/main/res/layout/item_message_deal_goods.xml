<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="520pt"
    android:id="@+id/layout_order"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24pt"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40pt"
        android:background="@drawable/shape_time_text_bg"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30pt"
        android:layout_marginRight="30pt"
        android:layout_marginTop="30pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="30pt"
            android:layout_marginLeft="30pt"
            android:layout_marginTop="22pt"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="28pt"
            />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:textColor="#999999"
            android:textSize="24pt"
            android:lines="2"
            android:maxLines="2"
            android:layout_marginTop="8pt"
            />


        <TextView
            android:id="@+id/bottom_text"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="30pt"
            android:layout_marginRight="30pt"
            android:paddingTop="20pt"
            android:paddingBottom="20pt"
            />

        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="1pt"
            android:background="#E5E5E5"
            android:layout_marginLeft="30pt"
            android:layout_marginRight="30pt"
            app:layout_constraintBottom_toTopOf="@id/bottom_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/goods_container"
            android:layout_width="match_parent"
            android:layout_height="144pt"
            android:layout_marginBottom="20pt"
            android:layout_marginTop="50pt"
            app:layout_constraintBottom_toTopOf="@id/line"
            app:layout_constraintTop_toBottomOf="@id/desc"
            android:layout_marginLeft="30pt"
            >

            <ImageView
                android:id="@+id/goods_image"
                android:layout_width="144pt"
                android:layout_height="144pt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/goods_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/goods_image"
                app:layout_constraintTop_toTopOf="@id/goods_image"
                android:layout_marginLeft="20pt"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="30pt"
                android:maxLines="2"
                android:textSize="28pt"
                android:textColor="#333333"
                />

            <TextView
                android:id="@+id/goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="30pt"
                android:textSize="24pt"
                android:textColor="#666666"
                />

            <TextView
                android:id="@+id/goods_info"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/goods_title"
                app:layout_constraintBottom_toTopOf="@id/goods_count"
                app:layout_constraintLeft_toLeftOf="@id/goods_title"
                app:layout_constraintRight_toRightOf="parent"
                android:maxLines="1"
                android:textColor="#999999"
                android:textSize="24pt"
                />


        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>