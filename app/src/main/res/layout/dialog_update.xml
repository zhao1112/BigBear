<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/ds600"
        android:layout_height="@dimen/ds652"
        android:background="@drawable/img_update_bg"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds232"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds60"
                android:text="发现新版本"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/ds40" />

        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/ds24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">







            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:scrollbars="none">

            </ListView>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds74"
            android:layout_marginBottom="@dimen/ds40">

            <LinearLayout
                android:id="@+id/button_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds74"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/ds72"
                    android:layout_marginLeft="@dimen/ds40"
                    android:layout_marginRight="@dimen/ds22"
                    android:layout_weight="1"
                    android:background="@drawable/update_bg_1"
                    android:text="以后再说"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/ds28" />

                <Button
                    android:id="@+id/update"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/ds72"
                    android:layout_marginLeft="@dimen/ds22"
                    android:layout_marginRight="@dimen/ds40"
                    android:layout_weight="1"
                    android:background="@drawable/update_bg_2"
                    android:text="立即更新"
                    android:textColor="@color/md_white"
                    android:textSize="@dimen/ds28" />


            </LinearLayout>


            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/ds480"
                android:progressDrawable="@drawable/progressbar_task"
                android:layout_height="@dimen/ds50"
                android:layout_centerInParent="true"
                android:max="100" />


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>