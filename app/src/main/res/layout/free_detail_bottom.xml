<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds1"
        android:background="@color/item_specification_item_minus_border"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds100"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bargain_free_detail_collect_layout"
            android:layout_width="@dimen/ds98"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bargain_free_detail_collect_img"
                android:layout_width="@dimen/ds50"
                android:layout_height="@dimen/ds50"
                android:src="@drawable/icon_like_normal" />

            <TextView
                android:id="@+id/bargain_free_detail_collect_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds2"
                android:text="收藏"
                android:textColor="@color/product_customer_collect"
                android:textSize="@dimen/ds20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bargain_free_detail_original_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/collect_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直接购买"
                android:textColor="@color/white"
                android:textSize="@dimen/ds24" />

            <TextView
                android:id="@+id/bargain_free_detail_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥90.00＋BT100"
                android:textColor="@color/white"
                android:textSize="@dimen/ds24" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bargain_free_detail_current_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color"
            android:paddingLeft="10pt">

            <LinearLayout
                android:id="@+id/bargain_detail_current_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前价立即购买"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ds24" />

                    <TextView
                        android:id="@+id/bargain_detail_current_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ds4"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ds24" />


                </LinearLayout>


                <TextView
                    android:id="@+id/bargain_free_detail_current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ds8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ds20" />

            </LinearLayout>

            <TextView
                android:id="@+id/bargain_detail_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="砍价随意拿"
                android:textColor="@color/white"
                android:textSize="@dimen/ds28"
                android:visibility="gone" />


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>