<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds2"
        android:background="@color/divider"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ds20"
        android:layout_marginLeft="@dimen/ds30"
        android:layout_marginRight="@dimen/ds30"
        android:orientation="vertical"
        android:paddingTop="@dimen/ds20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.yunqin.bearmall.widget.CircleImageView
                android:id="@+id/comment_icon"
                android:layout_width="@dimen/ds56"
                android:layout_height="@dimen/ds56"></com.yunqin.bearmall.widget.CircleImageView>

            <TextView
                android:id="@+id/comment_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds16"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/product_brand_name_color"
                android:textSize="@dimen/ds24" />

            <TextView
                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/product_sell_count"
                android:textSize="@dimen/ds20" />

        </LinearLayout>

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds20"
            android:text=""
            android:textColor="@color/product_brand_name_color"
            android:textSize="@dimen/ds24" />

    </LinearLayout>

</LinearLayout>