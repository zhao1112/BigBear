<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingLeft="@dimen/ds30"
            android:paddingRight="@dimen/ds30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds20"
                android:text="糖果说明"
                android:textColor="#666666"
                android:textSize="@dimen/ds28" />

            <TextView
                android:id="@+id/tangguo_shuoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds10"
                android:textColor="#909090"
                android:textSize="@dimen/ds24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/ds15"
                android:paddingBottom="@dimen/ds10">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ds2"
                    android:layout_gravity="center"
                    android:background="#E7E7E7" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/baozhang_shuoming"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds80"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/ds30"
                android:paddingRight="@dimen/ds30">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/ds34"
                        android:layout_height="@dimen/ds34"
                        android:src="@drawable/icon_pei" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ds16"
                        android:text="全场包邮"
                        android:textColor="#909090"
                        android:textSize="@dimen/ds24" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/ds34"
                        android:layout_height="@dimen/ds34"
                        android:src="@drawable/icon_7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ds16"
                        android:text="7天退换"
                        android:textColor="#909090"
                        android:textSize="@dimen/ds24" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <ImageView
                    android:layout_width="@dimen/ds12"
                    android:layout_height="@dimen/ds24"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_arrow_right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds2"
                android:layout_gravity="center"
                android:background="#E7E7E7" />

        </LinearLayout>


        <LinearLayout
            android:background="#fff"
            android:id="@+id/jiage_shuoming"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds80"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/ds30"
            android:paddingRight="@dimen/ds30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="价格说明"
                android:textColor="#666666"
                android:textSize="@dimen/ds28" />

            <ImageView
                android:layout_width="@dimen/ds12"
                android:layout_height="@dimen/ds24"
                android:layout_gravity="center"
                android:src="@drawable/icon_arrow_right" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>