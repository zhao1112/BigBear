<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ds20"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="200pt"
            android:layout_height="200pt"
            android:layout_marginLeft="@dimen/ds30"
            android:layout_marginTop="@dimen/ds20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/ds20"
        android:layout_marginTop="@dimen/ds20"
        android:layout_marginRight="@dimen/ds30"
        android:orientation="vertical">

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ds80"
            android:lineSpacingExtra="@dimen/ds8"
            android:text="[大熊商城]参加0元拼团，就有机会中奖0元拿走"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />


        <TextView
            android:id="@+id/goods_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds20"
            android:text="恭喜您中奖，你可以0元获得该奖品，订单已派送"
            android:textColor="#F5A623"
            android:textSize="@dimen/ds28" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds1"
            android:layout_marginTop="@dimen/ds22"
            android:background="#E7E7E7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10pt"
            android:layout_marginBottom="10pt">

            <com.yunqin.bearmall.widget.Highlight.HighlightButton
                android:id="@+id/look_order"
                android:layout_width="160pt"
                android:layout_height="@dimen/ds52"
                android:layout_alignParentRight="true"
                android:background="@drawable/duihuan_xiangqing_select"
                android:text="查看详情"
                android:textColor="@color/main_color"
                android:textSize="@dimen/ds26" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>