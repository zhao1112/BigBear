<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="626pt"
        android:background="@drawable/shape_bank_3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="176pt"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40pt"
                android:text="选择到账银行卡"
                android:textColor="#333333"
                android:textSize="40pt" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40pt"
                android:layout_marginTop="10pt"
                android:text="请留意各银行到账时间"
                android:textColor="#999999"
                android:textSize="28pt" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="#E7E7E7" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="288pt"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/bank_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>


        </ScrollView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="#E7E7E7" />


        <LinearLayout
            android:id="@+id/add_bank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36pt"
                android:layout_height="36pt"
                android:layout_marginLeft="48pt"
                android:src="@drawable/add_bank" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50pt"
                android:text="添加银行卡"
                android:textColor="#666666"
                android:textSize="32pt" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>