<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/ds374"
        android:layout_height="@dimen/ds561"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_good"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds360"
            android:padding="@dimen/ds16"
            android:src="@drawable/test_goods_image" />

        <TextView
            android:id="@+id/item_good_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ds20"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/ds5"
            android:minLines="2"
            android:maxLines="2"
            android:textColor="#333333"
            android:textSize="@dimen/ds24" />

        <LinearLayout
            android:layout_width="@dimen/ds354"
            android:layout_height="@dimen/ds72"
            android:layout_gravity="center"
            android:background="@drawable/price_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/ds142"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/ds16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直接购买"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/ds20" />

                <TextView
                    android:id="@+id/tv_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/ds20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/ds212"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/ds16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大熊零售价"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ds20" />

                <TextView
                    android:id="@+id/tv_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ds20" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds1"
            android:background="#F7F7F7" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/ds1"
        android:layout_height="@dimen/ds560"
        android:background="#F7F7F7" />
</LinearLayout>