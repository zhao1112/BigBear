<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds2"
        android:layout_marginTop="@dimen/ds1"
        android:background="#F7F7F7" />

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/shop_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:overScrollMode="never"
            android:scrollbars="none"></ListView>
    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

    <LinearLayout
        android:layout_below="@+id/view"
        android:layout_marginTop="@dimen/ds130"
        android:layout_centerHorizontal="true"
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="@dimen/ds350"
            android:layout_height="@dimen/ds180"
            android:src="@drawable/img_bm" />
        <TextView
            android:layout_marginTop="@dimen/ds20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无店铺活动"
            android:textColor="#999999"
            android:textSize="@dimen/ds28" />
    </LinearLayout>
</RelativeLayout>
