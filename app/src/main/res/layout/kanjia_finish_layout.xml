<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="@dimen/ds534"
        android:layout_height="@dimen/ds356"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ds50"
                android:layout_marginRight="@dimen/ds50"
                android:gravity="center"
                android:text="砍价已完成，通知伙伴购买吧！"
                android:textColor="#333333"
                android:textSize="@dimen/ds30" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds72"
            android:layout_marginBottom="@dimen/ds30"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/ok"
                android:layout_width="350pt"
                android:layout_height="match_parent"
                android:background="@drawable/bg_green_1"
                android:gravity="center"
                android:text="好的，马上通知！"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/ds28" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>