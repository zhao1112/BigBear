<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/item_article_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ar_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:padding="@dimen/dp_13"
                android:text="取消"
                android:textColor="#ff272727"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/ar_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_2"
                android:padding="@dimen/dp_13"
                android:text="发布 "
                android:textColor="#ff272727"
                android:textSize="@dimen/sp_14"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_71"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/item_article_et">

            <EditText
                android:id="@+id/ar_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_9"
                android:background="@null"
                android:maxLength="200"
                android:hint="欢迎大家积极发言，理性发言"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/text_conten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="0/200"
                android:textColor="#ff999999"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"/>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>