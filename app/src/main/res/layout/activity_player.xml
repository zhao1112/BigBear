<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.video.videoplayer.player.PlayerActivity">


    <com.video.videoplayer.player.VideoView
        android:id="@+id/bearmall_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </com.video.videoplayer.player.VideoView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@drawable/dkplayer_shape_standard_controller_top_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bus_back"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_gravity="center"
            android:padding="@dimen/dp_12"
            android:src="@drawable/dkplayer_ic_action_arrow_back"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/video_dwon"
            android:layout_width="@dimen/dp_46"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:visibility="gone"/>


    </LinearLayout>

</RelativeLayout>
