<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/b_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_10"
            android:lineSpacingExtra="@dimen/dp_8"
            android:text="小红书网红氨基酸洗发水护发素沐浴露持久留香男女柔顺去屑无硅油"
            android:textColor="#ff272727"
            android:textScaleX="1"
            android:textSize="@dimen/sp_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">

            <TextView
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="券后价"
                android:textColor="#fff3280a"
                android:textSize="@dimen/sp_13"/>

            <TextView
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_toRightOf="@id/one"
                android:text="¥"
                android:textColor="#fff3280a"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/b_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_toRightOf="@id/two"
                android:layout_weight="1"
                android:text="49.90"
                android:textColor="#fff3280a"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/coupon_bg_l">

                <TextView
                    android:id="@+id/comm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_marginTop="@dimen/dp_2"
                    android:gravity="center"
                    android:text="¥50"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">

            <TextView
                android:id="@+id/b_price_original"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:text="¥99.99"
                android:textColor="#ff272727"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/b_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量8493"
                android:textColor="#ff797979"
                android:textSize="@dimen/sp_11"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_345"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">

            <ImageView
                android:id="@+id/b_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bitmap_price"/>

                <TextView
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="券后价"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_11"/>

                <TextView
                    android:id="@+id/b_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/three"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:text="49.9"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"/>

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_139"
                android:layout_height="@dimen/dp_49"
                android:layout_centerVertical="true"
                android:src="@mipmap/bitmap_slogan"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/dp_78"
                    android:layout_height="@dimen/dp_78">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/bitmap_bg"/>

                    <ImageView
                        android:id="@+id/b_image2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_1"
                        android:scaleType="fitXY"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:text="长按识别二维码"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/dp_11"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>