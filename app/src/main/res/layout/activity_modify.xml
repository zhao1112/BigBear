<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/md_white">

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:src="@drawable/icon_backs"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="更换手机号"
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_16"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:background="@color/md_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sett_left"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_18"
            android:text="已绑号码"
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_14"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/sett_left"
            android:background="@drawable/address_bg_vip"
            android:hint="+86 17520161624"
            android:textSize="@dimen/sp_14"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#fff1f1f1"/>

        <TextView
            android:id="@+id/sett_left_but"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_18"
            android:text="验证码"
            android:textColor="#ff272727"
            android:textSize="@dimen/sp_14"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toLeftOf="@id/sett_verification"
            android:layout_toRightOf="@id/sett_left_but"
            android:background="@drawable/address_bg_vip"
            android:hint="获取验证码"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/sett_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/address_bg_green1"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10"
            android:text="获取验证码"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_12"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_21"
        android:background="@drawable/address_bg_green1"
        android:gravity="center"
        android:text="确定绑定"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_15"/>

</LinearLayout>