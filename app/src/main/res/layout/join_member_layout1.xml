<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="@dimen/ds560"
        android:layout_height="@dimen/ds376"
        android:background="#ffffff"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds50"
                android:layout_marginTop="@dimen/ds50"
                android:layout_marginRight="@dimen/ds50"
                android:gravity="center"
                android:text=""
                android:textColor="#333333"
                android:textSize="@dimen/ds32" />


        </LinearLayout>


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds50"
            android:layout_marginTop="@dimen/ds10"
            android:layout_marginRight="@dimen/ds50"
            android:layout_marginBottom="@dimen/ds20"
            android:gravity="center"
            android:textColor="#605f5f"
            android:textSize="@dimen/ds24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds72"
            android:layout_marginBottom="@dimen/ds30"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/join_member_ok"
                android:layout_width="@dimen/ds256"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_green_1"
                android:gravity="center"
                android:text="马上就去"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/ds28" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>