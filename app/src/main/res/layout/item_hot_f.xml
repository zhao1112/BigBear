<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dp_15"
              android:layout_marginTop="@dimen/dp_15"
              android:layout_marginRight="@dimen/dp_15"
              android:background="@drawable/bg_corner_search_dialog"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_13">

            <ImageView
                android:id="@+id/item_home_pro_image"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/text_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/lable_3"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_home_pro_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dp_4"
                android:maxLines="2"
                android:text="11111"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"/>


            <TextView
                android:id="@+id/item_seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_home_pro_title"
                android:layout_marginTop="@dimen/dp_9"
                android:gravity="center_vertical"
                android:text="淘宝店铺名称展示"
                android:textColor="#A6A6A6"
                android:textSize="@dimen/sp_11"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:layout_above="@id/boot"
                android:layout_marginBottom="@dimen/dp_7">

                <TextView
                    android:id="@+id/item_home_pro_quan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@mipmap/icon_coupons"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:text="130元劵"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_11"/>

                <TextView
                    android:id="@+id/tv_commision"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:background="@drawable/bg_commission1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_3"
                    android:paddingRight="@dimen/dp_3"
                    android:text="预估佣金:¥0.00"
                    android:textColor="#24A064"
                    android:textSize="@dimen/sp_11"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/boot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_13"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_home_pro_quanhoujia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="￥1111111"
                    android:textColor="#F3280A"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/item_home_pro_yuanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_toRightOf="@id/item_home_pro_quanhoujia"
                    android:text="123"
                    android:textColor="#888888"
                    android:textSize="@dimen/sp_11"/>

                <TextView
                    android:id="@+id/item_home_xiaoliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="月销 1000"
                    android:textSize="@dimen/sp_11"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="#F1F1F1"
                android:visibility="gone"/>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>