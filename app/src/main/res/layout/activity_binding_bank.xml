<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    tools:context="com.yunqin.bearmall.ui.activity.BindingBankActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds80"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/new_version_back"
            android:layout_width="@dimen/ds74"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/ds30">

            <ImageView
                android:layout_width="@dimen/ds44"
                android:layout_height="@dimen/ds44"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_backs" />
        </RelativeLayout>

        <TextView
            android:id="@+id/new_version_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加银行卡"
            android:textColor="#333333"
            android:textSize="@dimen/ds32" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70pt"

        android:paddingLeft="40pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="请绑定持卡人本人的银行卡"
            android:textColor="#999999"
            android:textSize="28pt" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120pt"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="40pt">

        <TextView
            android:layout_width="220pt"
            android:layout_height="wrap_content"
            android:text="持卡人"
            android:textColor="#333333"
            android:textSize="28pt" />


        <EditText
            android:id="@+id/master_name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入姓名"
            android:textColor="#333333"
            android:textSize="28pt" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="30pt"
        android:background="#E7E7E7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120pt"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="40pt">

        <TextView
            android:layout_width="220pt"
            android:layout_height="wrap_content"
            android:text="持卡人身份证"
            android:textColor="#333333"
            android:textSize="28pt" />


        <EditText
            android:id="@+id/master_id_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="0123456789xX"
            android:hint="请输入持卡人身份证号码"
            android:inputType="number"
            android:maxLength="18"
            android:textColor="#333333"
            android:textSize="28pt" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="30pt"
        android:background="#E7E7E7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120pt"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="40pt">

        <TextView
            android:layout_width="220pt"
            android:layout_height="wrap_content"
            android:text="银行卡号"
            android:textColor="#333333"
            android:textSize="28pt" />


        <EditText
            android:id="@+id/master_bank_id_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入银行卡号"
            android:inputType="number"
            android:textColor="#333333"
            android:textSize="28pt" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="30pt"
        android:background="#E7E7E7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120pt"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="40pt">

        <TextView
            android:layout_width="220pt"
            android:layout_height="wrap_content"
            android:text="银行预留手机号"
            android:textColor="#333333"
            android:textSize="28pt" />


        <EditText
            android:id="@+id/master_phone_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入银行预留手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#333333"
            android:textSize="28pt" />


    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="80pt"
        android:layout_marginTop="20pt"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/change_check_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/check_box"
                style="@style/CheckBoxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40pt"
                android:layout_marginRight="16pt"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"
            android:textColor="#333333"
            android:textSize="28pt" />

        <LinearLayout
            android:id="@+id/bear_attorney_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《大熊代扣授权书》"
                android:textColor="@color/main_color"
                android:textSize="28pt" />

        </LinearLayout>


    </LinearLayout>


    <!--android:background="@drawable/new_version_pwd_button_selector"-->

    <Button
        android:id="@+id/next_button"
        android:layout_width="@dimen/ds620"
        android:layout_height="@dimen/ds72"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ds190"
        android:background="@drawable/bank_button_selector"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/ds28" />


</LinearLayout>
