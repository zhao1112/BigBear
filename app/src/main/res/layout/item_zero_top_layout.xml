<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.yunqin.bearmall.widget.TopBanner
        android:id="@+id/top_ad_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds300"
        android:background="@drawable/default_banner"></com.yunqin.bearmall.widget.TopBanner>

    <ImageView
        android:id="@+id/center_ad_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds168"
        android:layout_margin="@dimen/ds20"
        android:background="@drawable/default_ad_one"
        app:layout_constraintTop_toBottomOf="@+id/top_ad_img"></ImageView>

    <LinearLayout
        android:id="@+id/do_task"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds88"
        android:layout_marginTop="@dimen/ds20"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/center_ad_img">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds30"
            android:layout_weight="1"
            android:text="做任务，领糖果"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ds20"
            android:text="NEW"
            android:textColor="#23A064"
            android:textSize="@dimen/ds28" />

        <ImageView
            android:layout_width="@dimen/ds12"
            android:layout_height="@dimen/ds24"
            android:layout_marginRight="@dimen/ds30"
            android:src="@drawable/icon_arrow_right" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>