<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/dp_270"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_corner_search_dialog">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_fansinfo">

            <ImageView
                android:id="@+id/toiamge"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/toiamge"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="136****7122"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_16"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_43"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_16"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/copy_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邀请ID"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_12"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:src="@mipmap/app_copy_fansh"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/code_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="FSHGF"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_12"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_43"
                android:layout_marginBottom="@dimen/dp_16"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/copy_wxid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信号"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_12"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:src="@mipmap/app_copy_fansh"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="未填写"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_12"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/close"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_7"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/fans_close"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top">

            <LinearLayout
                android:id="@+id/min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上个月预估收益"
                        android:textColor="#ff888888"
                        android:textSize="@dimen/sp_12"/>

                    <TextView
                        android:id="@+id/lastMonthIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_9"
                        android:text="￥0.00"
                        android:textColor="#ffd62b2b"
                        android:textSize="@dimen/sp_16"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累计预估收益"
                        android:textColor="#ff888888"
                        android:textSize="@dimen/sp_12"/>

                    <TextView
                        android:id="@+id/cumulative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_9"
                        android:text="￥0.00"
                        android:textColor="#ffd62b2b"
                        android:textSize="@dimen/sp_16"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/creattime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/min"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="注册时间 2019.08.17 18:42:12"
                android:textColor="#ff4f4f4f"
                android:textSize="@dimen/sp_14"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>