<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/ds250"
              android:background="#F7F7F7"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds150"
        android:layout_marginTop="@dimen/ds20"
        android:background="@color/md_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds30"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:textColor="#484848"
                    android:textSize="@dimen/ds28"/>

                <TextView
                    android:id="@+id/address_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds48"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="#333333"
                    android:textSize="@dimen/ds28"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/address_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds30"
                    android:layout_marginRight="@dimen/dp_10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textSize="@dimen/ds24"/>


            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/btn_edit"
            android:layout_width="@dimen/ds140"
            android:layout_height="@dimen/ds52"
            android:layout_marginRight="@dimen/ds30"
            android:background="@drawable/address_bg_green"
            android:paddingLeft="@dimen/ds46"
            android:paddingTop="@dimen/ds4"
            android:paddingRight="@dimen/ds46"
            android:paddingBottom="@dimen/ds4"
            android:text="编辑"
            android:textColor="@color/main_color"
            android:textSize="@dimen/ds24"/>


    </LinearLayout>


    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds80"
        android:background="@color/md_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/check_box_bt"
            android:layout_width="@dimen/ds100"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/check_box_bt_"
                style="@style/CheckBoxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/ds30"
                android:checked="true"
                android:enabled="false"
                android:gravity="center"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/address_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设置为默认"
            android:textColor="#666666"
            android:textSize="@dimen/ds24"/>


        <Button
            android:id="@+id/btn_del"
            android:layout_width="@dimen/ds140"
            android:layout_height="@dimen/ds52"
            android:layout_marginRight="@dimen/ds30"
            android:background="@drawable/address_bg"
            android:paddingLeft="@dimen/ds46"
            android:paddingTop="@dimen/ds4"
            android:paddingRight="@dimen/ds46"
            android:paddingBottom="@dimen/ds4"
            android:text="删除"
            android:textColor="#666666"
            android:textSize="@dimen/ds24"/>

    </LinearLayout>


</LinearLayout>