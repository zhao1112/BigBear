<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/ds20"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds88">
        <TextView
            android:layout_marginLeft="@dimen/ds30"
            android:layout_weight="1"
            android:textColor="#333333"
            android:textSize="@dimen/ds28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"/>
        <LinearLayout
            android:id="@+id/look_all_order"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginRight="@dimen/ds18"
                android:textColor="#999999"
                android:textSize="@dimen/ds24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看全部"/>
            <ImageView
                android:layout_marginRight="@dimen/ds32"
                android:layout_width="@dimen/ds12"
                android:layout_height="@dimen/ds24"
                android:src="@drawable/icon_arrow_right"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/ds30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds1"
        android:background="#F7F7F7"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds144">
        <LinearLayout
            android:id="@+id/layout_wait_pay"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/selector_bg"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55pt">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/icon_mine_daifukuan"
                    android:layout_width="@dimen/ds48"
                    android:layout_height="@dimen/ds48" />

                <TextView
                    android:id="@+id/daifukuan_number"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:layout_marginLeft="-20pt"
                    android:layout_toRightOf="@+id/image1"
                    android:textSize="@dimen/ds16"
                    android:paddingRight="@dimen/ds8"
                    android:paddingLeft="@dimen/ds8"
                    android:paddingBottom="@dimen/ds1"
                    android:paddingTop="@dimen/ds1"
                    android:background="@drawable/order_number_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <TextView
                android:layout_marginTop="@dimen/ds16"
                android:textColor="#333333"
                android:textSize="@dimen/ds24"
                android:text="待付款"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_wait_send_out_goods"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/selector_bg"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55pt">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/icon_mine_daifahuo"
                    android:layout_width="@dimen/ds48"
                    android:layout_height="@dimen/ds48" />

                <TextView
                    android:id="@+id/daifahuo_number"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:text="99+"
                    android:layout_marginLeft="-20pt"
                    android:layout_toRightOf="@+id/image2"
                    android:textSize="@dimen/ds16"
                    android:paddingRight="@dimen/ds8"
                    android:paddingLeft="@dimen/ds8"
                    android:paddingBottom="@dimen/ds1"
                    android:paddingTop="@dimen/ds1"
                    android:background="@drawable/order_number_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/ds16"
                android:textColor="#333333"
                android:textSize="@dimen/ds24"
                android:text="待发货"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_wait_get_goods"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/selector_bg"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55pt">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/icon_mine_daishouhuo"
                    android:layout_width="@dimen/ds48"
                    android:layout_height="@dimen/ds48" />

                <TextView
                    android:id="@+id/daishouhuo_number"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:text="33"
                    android:layout_marginLeft="-20pt"
                    android:layout_toRightOf="@+id/image3"
                    android:textSize="@dimen/ds16"
                    android:paddingRight="@dimen/ds8"
                    android:paddingLeft="@dimen/ds8"
                    android:paddingBottom="@dimen/ds1"
                    android:paddingTop="@dimen/ds1"
                    android:background="@drawable/order_number_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/ds16"
                android:textColor="#333333"
                android:textSize="@dimen/ds24"
                android:text="待收货"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_wait_comment"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/selector_bg"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55pt">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/icon_mine_daipingjia"
                    android:layout_width="@dimen/ds48"
                    android:layout_height="@dimen/ds48" />

                <TextView
                    android:id="@+id/daipingjia_number"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:text="3"
                    android:layout_marginLeft="-20pt"
                    android:layout_toRightOf="@+id/image4"
                    android:textSize="@dimen/ds16"
                    android:paddingRight="@dimen/ds8"
                    android:paddingLeft="@dimen/ds8"
                    android:paddingBottom="@dimen/ds1"
                    android:paddingTop="@dimen/ds1"
                    android:background="@drawable/order_number_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/ds16"
                android:textColor="#333333"
                android:textSize="@dimen/ds24"
                android:text="待评价"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_after_sale"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/selector_bg"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55pt">

                <ImageView
                    android:id="@+id/image5"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/icon_mine_tuihuo"
                    android:layout_width="@dimen/ds48"
                    android:layout_height="@dimen/ds48" />

                <TextView
                    android:id="@+id/tuihuo_number"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:text="3"
                    android:layout_marginLeft="-20pt"
                    android:layout_toRightOf="@+id/image5"
                    android:textSize="@dimen/ds16"
                    android:paddingRight="@dimen/ds8"
                    android:paddingLeft="@dimen/ds8"
                    android:paddingBottom="@dimen/ds1"
                    android:paddingTop="@dimen/ds1"
                    android:background="@drawable/order_number_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/ds16"
                android:textColor="#333333"
                android:textSize="@dimen/ds24"
                android:text="退货/售后"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>