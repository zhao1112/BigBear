<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.yunqin.bearmall.ui.activity.PhoneVerifyActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds80"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/new_version_back"
            android:layout_width="@dimen/ds74"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/ds30">

            <ImageView
                android:layout_width="@dimen/ds44"
                android:layout_height="@dimen/ds44"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_backs" />
        </RelativeLayout>

        <TextView
            android:id="@+id/new_version_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="验证手机号"
            android:textColor="#333333"
            android:textSize="@dimen/ds32" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#F7F7F7" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="绑定银行卡需短信确认，请发送验证码进行验"
        android:textColor="#666666"
        android:textSize="28pt" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80pt"
        android:orientation="horizontal"
        android:paddingLeft="64pt"
        android:paddingRight="64pt">


        <EditText
            android:id="@+id/rand_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="#333333"
            android:textSize="28pt" />

        <Button
            android:id="@+id/get_code_"
            android:layout_width="168pt"
            android:layout_height="64pt"
            android:background="@drawable/bg_green"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#169F65"
            android:textSize="28pt" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="64pt"
        android:layout_marginTop="6pt"
        android:layout_marginRight="64pt"
        android:background="#E7E7E7" />


    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds72"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="64pt"
        android:layout_marginTop="@dimen/ds100"
        android:layout_marginRight="64pt"
        android:background="@drawable/new_version_pwd_button_selector"
        android:text="验证"
        android:textColor="@color/white"
        android:textSize="@dimen/ds28" />


    <TextView
        android:id="@+id/error_info_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64pt"
        android:layout_marginTop="24pt"
        android:layout_marginRight="64pt"
        android:textColor="#E75B56"
        android:textSize="28pt" />


</LinearLayout>
