<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:background="#0b333333"
        android:id="@+id/error_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds88"
        android:gravity="center"
        android:text="程序发生异常"
        android:textColor="#666666"
        android:textSize="@dimen/ds30" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/ds20">

        <TextView
            android:id="@+id/error_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#333333"
            android:textSize="@dimen/ds26" />


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds120"
        android:background="#0e727171"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ds15"
            android:layout_weight="1"
            android:text="重启应用"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

        <Button
            android:id="@+id/button_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ds15"
            android:layout_weight="1"
            android:text="上报错误"
            android:textColor="#333333"
            android:textSize="@dimen/ds28" />

    </LinearLayout>


</LinearLayout>