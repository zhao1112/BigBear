<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds80"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/new_version_user_icon"
            android:layout_width="@dimen/ds60"
            android:layout_height="@dimen/ds60"
            android:src="@drawable/new_version_user" />

        <TextView
            android:id="@+id/new_version_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds14"
            android:layout_weight="1"

            android:textColor="#333333"
            android:textSize="@dimen/ds24" />

        <TextView
            android:id="@+id/new_version_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds14"
            android:textColor="#999999"
            android:textSize="@dimen/ds20" />

    </LinearLayout>

    <TextView
        android:id="@+id/new_version_comment_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds10"
        android:textColor="#333333"
        android:textSize="@dimen/ds24" />


    <LinearLayout
        android:id="@+id/new_version_img_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds20"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/new_version_comment_img_1"
                android:layout_width="@dimen/ds162"
                android:layout_height="@dimen/ds162"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/new_version_comment_img_2"
                android:layout_width="@dimen/ds162"
                android:layout_height="@dimen/ds162"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                 />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/new_version_comment_img_3"
                android:layout_width="@dimen/ds162"
                android:layout_height="@dimen/ds162"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                 />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/new_version_comment_img_4"
                android:layout_width="@dimen/ds162"
                android:layout_height="@dimen/ds162"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                 />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds1"
        android:layout_marginTop="@dimen/ds20"
        android:background="#E5E5E5" />


</LinearLayout>