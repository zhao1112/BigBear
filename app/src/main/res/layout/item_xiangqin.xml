<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/home_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/bg_gray_solid">


        <ImageView
            android:id="@+id/item_home_pro_image"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/item_home_pro_title"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_home_pro_image"
            android:layout_marginTop="@dimen/dp_6"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_4"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15">

        </TextView>

        <LinearLayout
            android:id="@+id/rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_home_pro_title"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_5">

            <TextView
                android:id="@+id/item_home_pro_quan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/icon_coupons"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:text="130元劵"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tv_commision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/bg_commission1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:text="反¥0.00"
                android:textColor="#24A064"
                android:textSize="@dimen/sp_11" />


        </LinearLayout>

        <TextView
            android:id="@+id/item_home_pro_yuanjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl2"
            android:layout_marginTop="@dimen/dp_10"
            android:text="￥123"
            android:textColor="#888888"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/item_home_pro_quanhoujia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_home_pro_yuanjia"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="￥1111111"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_18" />


    </RelativeLayout>

</RelativeLayout>