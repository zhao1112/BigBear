<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds1"
        android:background="@color/divider"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds30"
        android:layout_marginRight="@dimen/ds30"
        android:layout_marginBottom="@dimen/ds20"
        android:orientation="vertical"
        android:paddingTop="@dimen/ds20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.yunqin.bearmall.widget.CircleImageView
                android:id="@+id/comment_icon"
                android:layout_width="@dimen/ds56"
                android:layout_height="@dimen/ds56"></com.yunqin.bearmall.widget.CircleImageView>

            <TextView
                android:id="@+id/comment_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds16"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/product_brand_name_color"
                android:textSize="@dimen/ds24" />

            <TextView
                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/product_sell_count"
                android:textSize="@dimen/ds20" />

        </LinearLayout>

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds20"
            android:text=""
            android:textColor="@color/product_brand_name_color"
            android:textSize="@dimen/ds24" />

        <LinearLayout
            android:id="@+id/comment_img_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds162"
            android:layout_marginTop="@dimen/ds20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/comment_img1"
                android:layout_width="@dimen/ds162"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/ds7"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/comment_img2"
                android:layout_width="@dimen/ds162"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds7"
                android:layout_marginRight="@dimen/ds7"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/comment_img3"
                android:layout_width="@dimen/ds162"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds7"
                android:layout_marginRight="@dimen/ds7"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="@dimen/ds162"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds7">

                <ImageView
                    android:id="@+id/comment_img4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:layout_width="@dimen/ds96"
                    android:layout_height="@dimen/ds32"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/ds10"
                    android:layout_marginBottom="@dimen/ds10"
                    android:alpha="0.7"
                    android:background="@drawable/white_bg_corners_16">

                    <TextView
                        android:id="@+id/comment_img_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="共0张"
                        android:textColor="@color/product_brand_name_color"
                        android:textSize="@dimen/ds24" />


                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>